<script>
    // Function to update cart count - YANG DIPERBAIKI
    async function updateCartCount() {
        try {
            console.log('üîÑ Updating cart count...');
            const response = await fetch('/cart/count');
            
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const result = await response.json();
            console.log('üìä Cart count result:', result);
            
            const cartCounter = document.getElementById('cartCount');
            if (cartCounter) {
                cartCounter.textContent = result.count;
                // Hide badge if count is 0
                if (result.count === 0) {
                    cartCounter.style.display = 'none';
                } else {
                    cartCounter.style.display = 'inline-flex';
                }
                console.log('‚úÖ Cart counter updated to:', result.count);
            } else {
                console.log('‚ùå Cart counter element not found');
            }
        } catch (error) {
            console.error('‚ùå Error updating cart count:', error);
            // Fallback: set to 0 if error
            const cartCounter = document.getElementById('cartCount');
            if (cartCounter) {
                cartCounter.textContent = '0';
                cartCounter.style.display = 'none';
            }
        }
    }

    // Update cart count when page loads
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üöÄ Page loaded, initializing cart count...');
        updateCartCount();
    });

    // Export function untuk dipanggil dari file lain - YANG DIPERBAIKI
    window.updateCartCount = updateCartCount;
    
    // Debug function untuk test manual
    window.debugCart = function() {
        console.log('üîß Manual cart debug:');
        console.log('updateCartCount function:', typeof updateCartCount);
        console.log('Cart counter element:', document.getElementById('cartCount'));
        updateCartCount();
    }
</script>