<script>
    // Dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
        const userDropdown = document.querySelector('.user-dropdown');
        const dropdownMenu = document.querySelector('.dropdown-menu');
        const preferencesForm = document.getElementById('userPreferencesForm');
        
        if (userDropdown && dropdownMenu) {
            const userMenuBtn = userDropdown.querySelector('.user-menu-btn');
            
            userMenuBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                const isVisible = dropdownMenu.style.display === 'block';
                dropdownMenu.style.display = isVisible ? 'none' : 'block';
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!userDropdown.contains(event.target)) {
                    dropdownMenu.style.display = 'none';
                }
            });
        }

        // Language switcher dropdown
        const languageSwitcher = document.querySelector('.language-switcher');
        const languageBtn = document.querySelector('.language-btn');
        const languageDropdown = document.querySelector('.language-dropdown');
        
        if (languageBtn && languageDropdown) {
            languageBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                const isVisible = languageDropdown.style.display === 'block';
                languageDropdown.style.display = isVisible ? 'none' : 'block';
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!languageSwitcher.contains(event.target)) {
                    languageDropdown.style.display = 'none';
                }
            });
        }

        // Auto-update currency when language changes in preferences form
        if (preferencesForm) {
            const languageSelect = document.getElementById('preferenceLanguage');
            const currencySelect = document.getElementById('preferenceCurrency');
            
            // Mapping bahasa ke currency
            const languageToCurrency = {
                'en': 'USD',
                'id': 'IDR',
                'es': 'MXN'
            };
            
            // Auto-update currency when language changes
            if (languageSelect && currencySelect) {
                languageSelect.addEventListener('change', function() {
                    const selectedLanguage = this.value;
                    const autoCurrency = languageToCurrency[selectedLanguage];
                    if (autoCurrency) {
                        currencySelect.value = autoCurrency;
                    }
                });
            }
            
            preferencesForm.addEventListener('submit', async function(event) {
                event.preventDefault();

                const language = preferencesForm.language.value;
                const currency = preferencesForm.currency.value;
                const submitButton = preferencesForm.querySelector('.preferences-submit');
                const labelSpan = submitButton.querySelector('span');
                const originalLabel = labelSpan.textContent;
                const savingLabel = preferencesForm.dataset.savingLabel || 'Saving...';
                const successLabel = preferencesForm.dataset.successLabel || 'Preferences updated!';
                const errorLabel = preferencesForm.dataset.errorLabel || 'Failed to update preferences';
                const successTitle = preferencesForm.dataset.successTitle || 'Success';
                const errorTitle = preferencesForm.dataset.errorTitle || 'Error';

                submitButton.disabled = true;
                submitButton.classList.add('is-saving');
                labelSpan.textContent = savingLabel;

                try {
                    const response = await fetch('/users/preferences', {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ language, currency })
                    });

                    const result = await response.json();

                    if (response.ok && result.success) {
                        if (typeof showNotification === 'function') {
                            showNotification('success', successTitle, successLabel);
                        }
                        setTimeout(() => {
                            window.location.reload();
                        }, 800);
                    } else {
                        if (typeof showNotification === 'function') {
                            showNotification('error', errorTitle, result.message || errorLabel);
                        }
                    }
                } catch (error) {
                    if (typeof showNotification === 'function') {
                        showNotification('error', errorTitle, errorLabel);
                    }
                } finally {
                    submitButton.disabled = false;
                    submitButton.classList.remove('is-saving');
                    labelSpan.textContent = originalLabel;
                }
            });
        }
        
        // Update cart count on page load
        updateCartCount();
        
        // PERBAIKAN: Hapus active state dari Home dan Logo
        // Biarkan semua menu tetap sama tanpa background khusus
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('nav a[href]');
        
        navLinks.forEach(link => {
            const href = link.getAttribute('href');
            // Hapus background active state untuk semua menu
            if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
                // Jangan tambahkan background, biarkan sama seperti menu lainnya
                link.style.fontWeight = '600';
            }
        });
    });
    
    // Function to update cart count
    async function updateCartCount() {
        try {
            const response = await fetch('/cart/count');
            const result = await response.json();
            
            const cartCounter = document.querySelector('.cart-count');
            if (cartCounter) {
                cartCounter.textContent = result.count;
                if (result.count > 0) {
                    cartCounter.style.display = 'flex';
                } else {
                    cartCounter.style.display = 'none';
                }
            }
        } catch (error) {
            console.error('Error updating cart count:', error);
        }
    }
    
    // Make updateCartCount available globally for other pages
    window.updateCartCount = updateCartCount;
</script>

