<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .orders-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #eaeaea;
        }
        
        .orders-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
            margin-bottom: 25px;
        }
        
        .stat-card {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            text-align: center;
            border-left: 4px solid #2c5aa0;
        }
        
        .stat-card.completed {
            border-left-color: #28a745;
        }
        
        .stat-card.processing {
            border-left-color: #ffc107;
        }
        
        .stat-card.pending {
            border-left-color: #fd7e14;
        }
        
        .stat-icon {
            font-size: 2rem;
            margin-bottom: 8px;
            color: #2c5aa0;
        }
        
        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c5aa0;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #666;
            font-weight: 500;
            font-size: 13px;
        }
        
        .order-card {
            background: white;
            border: 1px solid #eaeaea;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }
        
        .order-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.12);
        }
        
        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
            padding-bottom: 12px;
            border-bottom: 1px solid #eee;
        }
        
        .order-info {
            flex: 1;
        }
        
        .order-id {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 6px;
        }
        
        .order-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #666;
            font-size: 13px;
        }
        
        .order-status {
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 11px;
            font-weight: bold;
            text-transform: uppercase;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }
        
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        
        .status-processing {
            background: #cce7ff;
            color: #004085;
        }
        
        .status-shipped {
            background: #d1ecf1;
            color: #0c5460;
        }
        
        .status-completed {
            background: #d4edda;
            color: #155724;
        }
        
        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }
        
        .order-details {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 15px;
        }
        
        .order-products {
            margin-bottom: 12px;
        }
        
        .product-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #f8f9fa;
        }
        
        .product-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .product-image {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            color: #666;
        }
        
        .product-name {
            font-weight: 500;
            color: #333;
            font-size: 14px;
        }
        
        .product-quantity {
            color: #666;
            font-size: 12px;
        }
        
        .product-price {
            font-weight: 600;
            color: #2c5aa0;
            font-size: 13px;
        }
        
        .order-summary {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 6px 0;
            border-bottom: 1px solid #e9ecef;
            font-size: 13px;
        }
        
        .summary-row:last-child {
            border-bottom: none;
            font-weight: bold;
            font-size: 1rem;
            color: #2c5aa0;
        }
        
        .total-amount {
            font-size: 1.2rem;
            font-weight: bold;
            color: #28a745;
            text-align: right;
            margin: 12px 0;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 6px;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            flex-wrap: wrap;
        }
        
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-size: 13px;
        }
        
        .btn-primary {
            background: #007bff;
            color: white;
        }
        
        .btn-primary:hover {
            background: #0056b3;
            transform: translateY(-1px);
        }
        
        .btn-success {
            background: #28a745;
            color: white;
        }
        
        .btn-success:hover {
            background: #218838;
            transform: translateY(-1px);
        }
        
        .btn-secondary {
            background: #6c757d;
            color: white;
        }
        
        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-1px);
        }
        
        .btn-warning {
            background: #ffc107;
            color: black;
        }
        
        .btn-warning:hover {
            background: #e0a800;
            transform: translateY(-1px);
        }
        
        .status-control {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #eaeaea;
        }
        
        .status-select {
            padding: 6px 10px;
            border: 2px solid #e9ecef;
            border-radius: 5px;
            background: white;
            font-size: 13px;
            cursor: pointer;
            transition: border-color 0.3s ease;
            min-width: 150px;
        }
        
        .status-select:focus {
            outline: none;
            border-color: #2c5aa0;
        }
        
        .no-orders {
            text-align: center;
            padding: 50px 30px;
            color: #666;
            background: white;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        }
        
        .empty-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #ccc;
        }
        
        .empty-title {
            font-size: 1.3rem;
            margin-bottom: 8px;
            color: #2c5aa0;
        }
        
        .empty-message {
            font-size: 1rem;
            margin-bottom: 25px;
            line-height: 1.5;
        }
        
        .shipping-info {
            background: #f8f9fa;
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 12px;
        }
        
        .shipping-address {
            color: #666;
            line-height: 1.4;
            font-size: 13px;
        }
        
        .section-title {
            margin: 0 0 10px 0;
            color: #2c5aa0;
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 14px;
        }
        
        .quick-actions {
            display: flex;
            gap: 8px;
            margin-top: 10px;
        }
        
        @media (max-width: 768px) {
            .order-details {
                grid-template-columns: 1fr;
                gap: 15px;
            }
            
            .order-header {
                flex-direction: column;
                gap: 10px;
            }
            
            .order-meta {
                gap: 8px;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn {
                justify-content: center;
            }
            
            .quick-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <%- include('notification') %>
    
    <div class="orders-container">
        <div class="page-header">
            <h1 style="margin: 0; color: #2c5aa0; display: flex; align-items: center; gap: 8px; font-size: 1.5rem;">
                <i class="fas fa-clipboard-list"></i> <%= title %>
            </h1>
            <div style="color: #666; display: flex; align-items: center; gap: 6px; font-size: 14px;">
                <i class="fas fa-info-circle"></i>
                Manage and track all orders
            </div>
        </div>

        <!-- Orders Statistics -->
        <% if (orders && orders.length > 0) { %>
            <% 
                const stats = {
                    total: orders.length,
                    completed: orders.filter(o => o.status === 'completed').length,
                    processing: orders.filter(o => o.status === 'processing').length,
                    pending: orders.filter(o => o.status === 'pending').length
                };
            %>
            <div class="orders-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div class="stat-number"><%= stats.total %></div>
                    <div class="stat-label">Total Orders</div>
                </div>
                <div class="stat-card completed">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-number"><%= stats.completed %></div>
                    <div class="stat-label">Completed</div>
                </div>
                <div class="stat-card processing">
                    <div class="stat-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="stat-number"><%= stats.processing %></div>
                    <div class="stat-label">Processing</div>
                </div>
                <div class="stat-card pending">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-number"><%= stats.pending %></div>
                    <div class="stat-label">Pending</div>
                </div>
            </div>

            <!-- Orders List -->
            <% orders.forEach(function(order) { %>
                <div class="order-card">
                    <!-- Order Header -->
                    <div class="order-header">
                        <div class="order-info">
                            <div class="order-id">
                                <i class="fas fa-receipt"></i> Order #<%= order.id %>
                                <span class="order-status status-<%= order.status %>">
                                    <% if (order.status === 'pending') { %>
                                        <i class="fas fa-clock"></i>
                                    <% } else if (order.status === 'processing') { %>
                                        <i class="fas fa-cog"></i>
                                    <% } else if (order.status === 'shipped') { %>
                                        <i class="fas fa-shipping-fast"></i>
                                    <% } else if (order.status === 'completed') { %>
                                        <i class="fas fa-check-circle"></i>
                                    <% } else if (order.status === 'cancelled') { %>
                                        <i class="fas fa-times-circle"></i>
                                    <% } else { %>
                                        <i class="fas fa-question-circle"></i>
                                    <% } %>
                                    <%= order.status %>
                                </span>
                            </div>
                            <div class="order-meta">
                                <div class="meta-item">
                                    <i class="fas fa-user"></i>
                                    <strong>Customer:</strong> <%= order.userName %>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-calendar"></i>
                                    <strong>Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-boxes"></i>
                                    <strong>Items:</strong> <%= order.products.length %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Details -->
                    <div class="order-details">
                        <!-- Products -->
                        <div>
                            <h3 class="section-title">
                                <i class="fas fa-boxes"></i> Order Items
                            </h3>
                            <div class="order-products">
                                <% order.products.forEach(function(product) { %>
                                    <div class="product-item">
                                        <div class="product-info">
                                            <div class="product-image">
                                                <% if (product.productImage && product.productImage !== '/images/default.jpg') { %>
                                                    <img src="<%= product.productImage %>" alt="<%= product.productName %>" 
                                                         style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                                                <% } else { %>
                                                    <i class="fas fa-box"></i>
                                                <% } %>
                                            </div>
                                            <div>
                                                <div class="product-name"><%= product.productName %></div>
                                                <div class="product-quantity">
                                                    Qty: <%= product.quantity %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product-price">
                                            $<%= (product.price * product.quantity).toFixed(2) %>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div>
                            <div class="shipping-info">
                                <h4 class="section-title">
                                    <i class="fas fa-truck"></i> Shipping Info
                                </h4>
                                <div class="shipping-address">
                                    <strong>Address:</strong><br>
                                    <%= order.shippingAddress %>
                                </div>
                            </div>
                            
                            <div class="order-summary">
                                <h4 class="section-title">
                                    <i class="fas fa-calculator"></i> Order Summary
                                </h4>
                                <div class="summary-row">
                                    <span>Subtotal:</span>
                                    <span>$<%= (order.totalAmount * 0.9).toFixed(2) %></span>
                                </div>
                                <div class="summary-row">
                                    <span>Shipping:</span>
                                    <span style="color: #28a745;">FREE</span>
                                </div>
                                <div class="summary-row">
                                    <span>Tax (10%):</span>
                                    <span>$<%= (order.totalAmount * 0.1).toFixed(2) %></span>
                                </div>
                                <div class="summary-row">
                                    <span>Total:</span>
                                    <span style="font-weight: bold;">$<%= order.totalAmount %></span>
                                </div>
                            </div>
                            
                            <div class="total-amount">
                                <i class="fas fa-money-bill-wave"></i>
                                Total: $<%= order.totalAmount %>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/orders/<%= order.id %>" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a href="/api/orders/<%= order.id %>" class="btn btn-success" target="_blank">
                            <i class="fas fa-code"></i> API
                        </a>
                        <div class="quick-actions">
                            <button class="btn btn-warning" onclick="processOrder('<%= order.id %>')">
                                <i class="fas fa-cog"></i> Process
                            </button>
                            <button class="btn btn-success" onclick="completeOrder('<%= order.id %>')">
                                <i class="fas fa-check"></i> Complete
                            </button>
                            <button class="btn btn-secondary" onclick="cancelOrder('<%= order.id %>')">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                        </div>
                    </div>

                    <!-- Status Control -->
                    <div class="status-control">
                        <label style="font-weight: 600; color: #495057; display: flex; align-items: center; gap: 6px; margin-bottom: 6px; font-size: 13px;">
                            <i class="fas fa-sync"></i> Change Status:
                        </label>
                        <select class="status-select" data-order-id="<%= order.id %>">
                            <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                            <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                            <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                            <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                        </select>
                        <button class="btn btn-primary" onclick="updateOrderStatusFromSelect('<%= order.id %>')" style="margin-left: 8px; padding: 6px 12px;">
                            <i class="fas fa-save"></i> Update
                        </button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <!-- Empty State -->
            <div class="no-orders">
                <div class="empty-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h2 class="empty-title">No Orders Found</h2>
                <p class="empty-message">
                    There are no orders in the system yet.<br>
                    Start selling by having customers place orders!
                </p>
                <div style="display: flex; gap: 12px; justify-content: center; flex-wrap: wrap;">
                    <a href="/products" class="btn btn-primary" style="text-decoration: none;">
                        <i class="fas fa-shopping-bag"></i> Browse Products
                    </a>
                    <a href="/admin/products" class="btn btn-success" style="text-decoration: none;">
                        <i class="fas fa-plus"></i> Add Products
                    </a>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        // Status update functions
        function processOrder(orderId) {
            updateOrderStatus(orderId, 'processing');
        }

        function completeOrder(orderId) {
            updateOrderStatus(orderId, 'completed');
        }

        function cancelOrder(orderId) {
            updateOrderStatus(orderId, 'cancelled');
        }

        async function updateOrderStatus(orderId, status) {
            try {
                const response = await fetch('/admin/orders/' + orderId + '/status', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: status })
                });
                
                const result = await response.json();
                if (result.success) {
                    showNotification('success', 'Status Updated', 'Order #' + orderId + ' status has been updated to ' + status);
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('error', 'Update Failed', result.message || 'Failed to update order status');
                }
            } catch (error) {
                showNotification('error', 'Error', 'Error updating order status');
            }
        }

        async function updateOrderStatusFromSelect(orderId) {
            const select = document.querySelector('.status-select[data-order-id="' + orderId + '"]');
            const newStatus = select.value;
            await updateOrderStatus(orderId, newStatus);
        }
    </script>
</body>
</html>