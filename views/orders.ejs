<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .orders-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .orders-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #eaeaea;
        }

        .header-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .api-link {
            background: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: 2px solid #28a745;
            font-size: 14px;
        }

        .api-link:hover {
            background: #1e7e34;
            border-color: #1e7e34;
            transform: translateY(-2px);
            color: white;
        }
        
        .orders-title {
            color: #2c5aa0;
            font-size: 2.5rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .back-to-shop {
            color: #2c5aa0;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border: 2px solid #2c5aa0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .back-to-shop:hover {
            background: #2c5aa0;
            color: white;
            transform: translateY(-2px);
        }
        
        .orders-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }
        
        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            gap: 15px;
            flex: 1;
            min-width: 200px;
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .stat-content {
            flex: 1;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #2c5aa0;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #666;
            font-weight: 500;
        }
        
        .orders-list {
            display: grid;
            gap: 20px;
        }
        
        .order-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 1px solid #eaeaea;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.12);
        }
        
        .order-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #eaeaea;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .order-info {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }
        
        .order-id {
            font-weight: bold;
            color: #2c5aa0;
            font-size: 1.3rem;
        }
        
        .order-date {
            color: #666;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .order-status {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        
        .status-processing {
            background: #cce7ff;
            color: #004085;
        }
        
        .status-shipped {
            background: #d1ecf1;
            color: #0c5460;
        }
        
        .status-delivered {
            background: #d4edda;
            color: #155724;
        }
        
        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }
        
        .order-body {
            padding: 25px;
        }
        
        .order-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px;
            background: #f8f9fa;
            border-radius: 8px;
        }
        
        .meta-label {
            font-weight: 600;
            color: #495057;
        }
        
        .meta-value {
            color: #2c5aa0;
        }

        .meta-subtext {
            display: block;
            font-size: 0.75rem;
            color: #888;
            margin-top: 2px;
        }
        
        .order-items {
            margin-bottom: 20px;
        }

        .order-tracking {
            margin-top: 25px;
            padding: 20px;
            background: #f9fbff;
            border-radius: 12px;
            border: 1px solid #e0e8ff;
        }

        .tracking-title {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #2c5aa0;
            margin-bottom: 15px;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .tracking-timeline {
            position: relative;
            padding-left: 20px;
            border-left: 2px dashed #b7caf5;
            display: grid;
            gap: 18px;
            margin-bottom: 10px;
        }

        .timeline-item {
            display: flex;
            gap: 12px;
            position: relative;
        }

        .timeline-marker {
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: #2c5aa0;
            border: 4px solid white;
            box-shadow: 0 0 0 2px rgba(44, 90, 160, 0.2);
            position: absolute;
            left: -29px;
            top: 4px;
        }

        .timeline-content {
            background: white;
            border-radius: 10px;
            border: 1px solid #dee5ff;
            padding: 12px 15px;
            box-shadow: 0 3px 12px rgba(44, 90, 160, 0.08);
            width: 100%;
        }

        .timeline-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            margin-bottom: 6px;
        }

        .timeline-status {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            color: #2c5aa0;
        }

        .timeline-time {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .timeline-note {
            font-size: 0.95rem;
            color: #495057;
            line-height: 1.5;
            margin-bottom: 4px;
        }

        .timeline-actor {
            font-size: 0.8rem;
            color: #8795af;
            text-transform: uppercase;
            letter-spacing: 0.6px;
        }

        .order-tracking-empty {
            padding: 15px;
            border-radius: 10px;
            border: 1px dashed #b7caf5;
            background: rgba(44, 90, 160, 0.04);
            color: #5c6f99;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .tracking-admin-form {
            margin-top: 15px;
            padding: 15px;
            border-radius: 10px;
            border: 1px solid #cbd9ff;
            background: #eef4ff;
            display: grid;
            gap: 12px;
        }

        .tracking-admin-form h4 {
            margin: 0;
            color: #2c5aa0;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .tracking-form-row {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .tracking-form-row select,
        .tracking-form-row textarea {
            border-radius: 6px;
            border: 1px solid #c0d2f5;
            padding: 10px;
            font-size: 0.95rem;
            color: #2c5aa0;
        }

        .tracking-form-row select {
            min-width: 160px;
            font-weight: 600;
        }

        .tracking-note {
            flex: 1;
            min-height: 80px;
            resize: vertical;
            background: white;
            color: #495057;
        }

        .tracking-submit {
            display: flex;
            justify-content: flex-end;
        }

        .tracking-submit .btn {
            min-width: 160px;
        }
        
        .items-title {
            color: #2c5aa0;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .item-list {
            display: grid;
            gap: 10px;
        }
        
        .order-item {
            display: flex;
            align-items: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            gap: 15px;
        }
        
        .item-image {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .item-details {
            flex: 1;
        }
        
        .item-name {
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .item-meta {
            display: flex;
            gap: 15px;
            color: #666;
            font-size: 0.9rem;
        }
        
        .order-footer {
            padding: 20px;
            background: #f8f9fa;
            border-top: 1px solid #eaeaea;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .order-total {
            font-size: 1.5rem;
            font-weight: bold;
            color: #28a745;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .order-actions {
            display: flex;
            gap: 10px;
        }
        
        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }
        
        .btn-primary {
            background: #2c5aa0;
            color: white;
        }
        
        .btn-primary:hover {
            background: #1e3d72;
            transform: translateY(-2px);
        }
        
        .btn-outline {
            background: transparent;
            color: #2c5aa0;
            border: 2px solid #2c5aa0;
        }
        
        .btn-outline:hover {
            background: #2c5aa0;
            color: white;
            transform: translateY(-2px);
        }
        
        .btn-danger {
            background: #dc3545;
            color: white;
            border: 2px solid #dc3545;
        }
        
        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        .btn-warning {
            background: #ffc107;
            color: black;
            border: 2px solid #ffc107;
        }
        
        .btn-warning:hover {
            background: #e0a800;
            transform: translateY(-2px);
        }
        
        .empty-orders {
            text-align: center;
            padding: 80px 40px;
            color: #666;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #ccc;
        }
        
        .empty-title {
            font-size: 1.8rem;
            margin-bottom: 15px;
            color: #2c5aa0;
        }
        
        .empty-message {
            font-size: 1.2rem;
            margin-bottom: 30px;
            line-height: 1.6;
        }
        
        .shop-btn {
            background: linear-gradient(135deg, #2c5aa0, #3a7bd5);
            color: white;
            padding: 15px 30px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            font-size: 1.1rem;
        }
        
        .shop-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(44, 90, 160, 0.4);
        }

        /* Action buttons container */
        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .admin-status-controls {
            display: flex;
            flex-direction: column;
            gap: 8px;
            padding: 12px;
            background: #eef4ff;
            border: 1px solid #d6e4ff;
            border-radius: 8px;
            min-width: 220px;
        }

        .admin-status-controls h4 {
            margin: 0;
            font-size: 0.9rem;
            color: #2c5aa0;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .admin-status-row {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            align-items: center;
        }

        .admin-status-select {
            flex: 1;
            min-width: 140px;
            padding: 8px 10px;
            border-radius: 6px;
            border: 1px solid #c0d2f5;
            background: white;
            font-weight: 600;
            color: #2c5aa0;
        }

        .admin-quick-actions {
            display: flex;
            gap: 6px;
            flex-wrap: wrap;
        }

        .btn-info {
            background: #17a2b8;
            color: white;
            border: 2px solid #17a2b8;
        }

        .btn-info:hover {
            background: #117a8b;
            transform: translateY(-2px);
        }

        .btn-sm {
            padding: 8px 12px;
            font-size: 12px;
            border-radius: 6px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        @media (max-width: 768px) {
            .orders-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .header-actions {
                width: 100%;
                flex-direction: column;
            }
            
            .order-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .order-footer {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .order-actions {
                width: 100%;
                justify-content: space-between;
            }
            
            .btn {
                flex: 1;
                justify-content: center;
            }

            .action-buttons {
                flex-direction: column;
                width: 100%;
            }

            .admin-status-controls {
                width: 100%;
            }

            .admin-status-row,
            .admin-quick-actions {
                width: 100%;
            }

            .tracking-admin-form {
                width: 100%;
            }

            .tracking-form-row {
                flex-direction: column;
            }

            .tracking-form-row select,
            .tracking-form-row textarea {
                width: 100%;
            }

            .admin-status-select {
                width: 100%;
            }

            .btn-sm {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <%- include('notification') %>

    <div class="orders-container">
        <div class="orders-header">
            <h1 class="orders-title">
                <i class="fas fa-clipboard-list"></i>
                <%= isAdmin ? 'All Orders' : 'My Orders' %>
            </h1>
            <div class="header-actions">
                <a href="/products" class="back-to-shop">
                    <i class="fas fa-shopping-bag"></i>
                    Continue Shopping
                </a>
                <a href="/orders/api/json" class="api-link" target="_blank" rel="noopener">
                    <i class="fas fa-code"></i>
                    Lihat API Orders
                </a>
            </div>
        </div>

        <% if (orders && orders.length > 0) { %>
            <!-- Orders Statistics -->
            <div class="orders-stats">
                <div class="stat-card">
                    <div class="stat-icon" style="background: #e3f2fd;">
                        <i class="fas fa-clipboard-list" style="color: #2c5aa0;"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number"><%= orders.length %></div>
                        <div class="stat-label">Total Orders</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon" style="background: #fff3cd;">
                        <i class="fas fa-clock" style="color: #856404;"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number">
                            <%= orders.filter(order => order.status === 'pending' || order.status === 'processing').length %>
                        </div>
                        <div class="stat-label">Active Orders</div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon" style="background: #d4edda;">
                        <i class="fas fa-check-circle" style="color: #155724;"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number">
                            <%= orders.filter(order => order.status === 'completed' || order.status === 'delivered').length %>
                        </div>
                        <div class="stat-label">Completed Orders</div>
                    </div>
                </div>
            </div>

            <!-- Orders List -->
            <div class="orders-list">
                <% orders.forEach(function(order) { %>
                    <div class="order-card">
                        <!-- Order Header -->
                        <div class="order-header">
                            <div class="order-info">
                                <% if (isAdmin) { %>
                                    <div class="order-id">
                                        <i class="fas fa-hashtag"></i>
                                        Order #<%= order.id %>
                                    </div>
                                <% } %>
                                <div class="order-date">
                                    <i class="fas fa-calendar"></i>
                                    <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </div>
                            </div>
                            <div class="order-status status-<%= order.status %>">
                                <i class="fas fa-circle"></i>
                                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                            </div>
                        </div>

                        <!-- Order Body -->
                        <div class="order-body">
                            <!-- Order Meta Information -->
                            <div class="order-meta">
                                <div class="meta-item">
                                    <i class="fas fa-user"></i>
                                    <div>
                                        <span class="meta-label">Customer:</span>
                                        <span class="meta-value">
                                            <% if (isAdmin) { %>
                                                <%= order.userSummary ? order.userSummary.username : 'Unknown User' %>
                                                <% if (order.userSummary && order.userSummary.email) { %>
                                                    <span class="meta-subtext"><%= order.userSummary.email %></span>
                                                <% } %>
                                            <% } else { %>
                                                <%= order.user ? order.user.username : (user ? user.username : 'Unknown User') %>
                                            <% } %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="meta-item">
                                    <i class="fas fa-boxes"></i>
                                    <div>
                                        <span class="meta-label">Items:</span>
                                        <span class="meta-value">
                                            <!-- ✅ FIXED: Handle both items and products -->
                                            <%= (order.items || order.products || []).length %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="meta-item">
                                    <i class="fas fa-credit-card"></i>
                                    <div>
                                        <span class="meta-label">Payment:</span>
                                        <span class="meta-value">
                                            <%= order.paymentMethod ? order.paymentMethod.charAt(0).toUpperCase() + order.paymentMethod.slice(1) : 'Cash' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div>
                                        <span class="meta-label">Shipping to:</span>
                                        <span class="meta-value" style="font-size: 0.9rem;">
                                            <%= order.shippingAddress ? order.shippingAddress.substring(0, 30) + (order.shippingAddress.length > 30 ? '...' : '') : 'No address' %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Items -->
                            <div class="order-items">
                                <h3 class="items-title">
                                    <i class="fas fa-shopping-bag"></i>
                                    Order Items (<%= (order.items || order.products || []).length %>)
                                </h3>
                                <div class="item-list">
                                    <% 
                                        // ✅ FIXED: Handle both items and products structure
                                        const orderItems = order.items || order.products || [];
                                        const statusLower = (order.status || '').toLowerCase();
                                        const canMarkReceived = ['processing', 'shipped', 'delivered'].includes(statusLower);
                                        const isCompletedStatus = statusLower === 'completed';
                                        const isCancelledStatus = statusLower === 'cancelled';
                                    %>
                                    <% if (orderItems.length > 0) { %>
                                        <% orderItems.forEach(function(item, index) { %>
                                            <div class="order-item">
                                                <div class="item-image">
                                                    <% if (item.image && item.image !== '/images/default.jpg') { %>
                                                        <img src="<%= item.image %>" alt="<%= item.name %>" 
                                                             style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                                                    <% } else { %>
                                                        <i class="fas fa-box" style="color: #666;"></i>
                                                    <% } %>
                                                </div>
                                                <div class="item-details">
                                                    <div class="item-name">
                                                        <%= item.name || 'Unknown Product' %>
                                                        <% if (item.productId) { %>
                                                            <small style="color: #666; font-size: 0.8rem;">(ID: <%= item.productId %>)</small>
                                                        <% } %>
                                                    </div>
                                                    <div class="item-meta">
                                                        <span>Qty: <%= item.quantity %></span>
                                                        <span>Price: $<%= item.price %></span>
                                                        <span>Subtotal: $<%= (item.price * item.quantity).toFixed(2) %></span>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <div class="order-item" style="justify-content: center; color: #666;">
                                            <i class="fas fa-exclamation-circle"></i>
                                            No items found in this order
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Order Tracking -->
                            <div class="order-tracking">
                                <div class="tracking-title">
                                    <i class="fas fa-route"></i>
                                    Tracking Pengiriman
                                </div>
                                <% 
                                    const trackingEvents = (order.tracking || []).slice().sort((a, b) => {
                                        const timeA = new Date(a.timestamp || a.time || 0).getTime();
                                        const timeB = new Date(b.timestamp || b.time || 0).getTime();
                                        return timeA - timeB;
                                    });
                                %>
                                <% if (trackingEvents.length > 0) { %>
                                    <div class="tracking-timeline">
                                        <% trackingEvents.forEach(function(event) { %>
                                            <div class="timeline-item">
                                                <span class="timeline-marker status-<%= event.status %>"></span>
                                                <div class="timeline-content">
                                                    <div class="timeline-header">
                                                        <div class="timeline-status">
                                                            <i class="fas fa-flag-checkered"></i>
                                                            <%= statusLabels && statusLabels[event.status] ? statusLabels[event.status] : (event.label || event.status) %>
                                                        </div>
                                                        <div class="timeline-time">
                                                            <%= event.timestamp 
                                                                ? new Date(event.timestamp).toLocaleString('id-ID', { 
                                                                    year: 'numeric', 
                                                                    month: 'short', 
                                                                    day: 'numeric',
                                                                    hour: '2-digit',
                                                                    minute: '2-digit'
                                                                }) 
                                                                : '-' %>
                                                        </div>
                                                    </div>
                                                    <% if (event.note) { %>
                                                        <div class="timeline-note"><%= event.note %></div>
                                                    <% } %>
                                                    <div class="timeline-actor">
                                                        <i class="fas fa-user"></i>
                                                        <%= (event.actor || 'system').charAt(0).toUpperCase() + (event.actor || 'system').slice(1) %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="order-tracking-empty">
                                        <i class="fas fa-info-circle"></i>
                                        Belum ada pembaruan tracking untuk pesanan ini.
                                    </div>
                                <% } %>

                                <% if (isAdmin) { %>
                                    <div class="tracking-admin-form">
                                        <h4>
                                            <i class="fas fa-plus-circle"></i>
                                            Tambah Pembaruan Tracking
                                        </h4>
                                        <div class="tracking-form-row">
                                            <select class="tracking-status-select" data-order-id="<%= order.id %>">
                                                <option value="">Pertahankan status saat ini</option>
                                                <% statusOptions.forEach(function(option) { %>
                                                    <option value="<%= option %>">
                                                        <%= statusLabels && statusLabels[option] ? statusLabels[option] : option.charAt(0).toUpperCase() + option.slice(1) %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                            <textarea class="tracking-note" placeholder="Catatan pembaruan (opsional)" data-order-id="<%= order.id %>"></textarea>
                                        </div>
                                        <div class="tracking-submit">
                                            <button class="btn btn-primary btn-sm add-tracking-update-btn" data-order-id="<%= order.id %>">
                                                <i class="fas fa-paper-plane"></i>
                                                Simpan Pembaruan
                                            </button>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Order Footer -->
                        <div class="order-footer">
                            <div class="order-total">
                                <i class="fas fa-dollar-sign"></i>
                                Total: $<%= order.totalAmount ? order.totalAmount.toFixed(2) : '0.00' %>
                            </div>
                            <div class="order-actions">
                                <% if (isAdmin) { %>
                                    <div class="admin-status-controls">
                                        <h4>
                                            <i class="fas fa-user-shield"></i>
                                            Admin Controls
                                        </h4>
                                        <div class="admin-status-row">
                                            <select class="admin-status-select" data-order-id="<%= order.id %>">
                                                <% statusOptions.forEach(function(option) { %>
                                                    <option value="<%= option %>" <%= option === order.status ? 'selected' : '' %>>
                                                        <%= option.charAt(0).toUpperCase() + option.slice(1) %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                            <button class="btn btn-primary btn-sm apply-status-btn" data-order-id="<%= order.id %>">
                                                <i class="fas fa-save"></i>
                                                Update
                                            </button>
                                        </div>
                                        <div class="admin-quick-actions">
                                            <button class="btn btn-outline btn-sm admin-quick-btn" 
                                                    data-order-id="<%= order.id %>" 
                                                    data-status="completed">
                                                <i class="fas fa-check"></i>
                                                Mark Completed
                                            </button>
                                            <button class="btn btn-outline btn-sm admin-quick-btn" 
                                                    data-order-id="<%= order.id %>" 
                                                    data-status="pending">
                                                <i class="fas fa-redo"></i>
                                                Set Pending
                                            </button>
                                            <button class="btn btn-danger btn-sm admin-quick-btn" 
                                                    data-order-id="<%= order.id %>" 
                                                    data-status="cancelled">
                                                <i class="fas fa-ban"></i>
                                                Cancel Order
                                            </button>
                                        </div>
                                    </div>
                                <% } %>
                                <div class="action-buttons">
                                    <a href="/orders/<%= order.id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                        View Details
                                    </a>

                                    <% if (!isAdmin && canMarkReceived && !isCompletedStatus && !isCancelledStatus) { %>
                                        <button class="btn btn-info btn-sm receive-order-btn"
                                                data-order-id="<%= order.id %>">
                                            <i class="fas fa-box-open"></i>
                                            Mark as Received
                                        </button>
                                    <% } %>
                                    
                                    <!-- Cancel Order Button (for pending/processing orders) -->
                                    <% if (order.status === 'pending' || order.status === 'processing') { %>
                                        <button class="btn btn-warning btn-sm cancel-order-btn" 
                                                data-order-id="<%= order.id %>">
                                            <i class="fas fa-times"></i>
                                            Cancel Order
                                        </button>
                                    <% } %>
                                    
                                    <!-- Delete Order Button (for all orders) -->
                                    <button class="btn btn-danger btn-sm delete-order-btn" 
                                            data-order-id="<%= order.id %>"
                                            data-order-total="<%= order.totalAmount %>">
                                        <i class="fas fa-trash"></i>
                                        Delete Order
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- Empty Orders State -->
            <div class="empty-orders">
                <div class="empty-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h2 class="empty-title">No Orders Yet</h2>
                <p class="empty-message">
                    You haven't placed any orders yet.<br>
                    Start shopping and place your first order today!
                </p>
                <a href="/products" class="shop-btn">
                    <i class="fas fa-shopping-bag"></i>
                    Browse Products
                </a>
            </div>
        <% } %>
    </div>

    <script>
        const statusLabelMap = {
            pending: 'Pending',
            processing: 'Processing',
            shipped: 'Shipped',
            delivered: 'Delivered',
            completed: 'Completed',
            cancelled: 'Cancelled'
        };

        function getStatusLabel(status) {
            if (!status || typeof status !== 'string') return '';
            return statusLabelMap[status] || status.charAt(0).toUpperCase() + status.slice(1);
        }

        async function sendStatusUpdate(orderId, status, {
            successTitle = 'Status Updated',
            successMessage = '',
            errorTitle = 'Update Failed',
            note = ''
        } = {}) {
            try {
                const payload = { status };
                if (note && note.trim().length > 0) {
                    payload.note = note.trim();
                }

                const response = await fetch('/orders/' + orderId, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification('success', successTitle, successMessage || result.message || 'Order updated successfully');
                    setTimeout(() => {
                        location.reload();
                    }, 1200);
                } else {
                    showNotification('error', errorTitle, result.message || 'Failed to update order');
                }
            } catch (error) {
                showNotification('error', errorTitle, 'Error updating order: ' + error.message);
            }
        }

        async function cancelOrder(orderId) {
            if (!confirm('Are you sure you want to cancel this order?')) return;
            await sendStatusUpdate(orderId, 'cancelled', {
                successTitle: 'Order Cancelled',
                successMessage: 'Your order has been cancelled successfully.',
                errorTitle: 'Cancellation Failed',
                note: 'Order dibatalkan oleh customer.'
            });
        }

        async function markOrderReceived(orderId) {
            if (!confirm('Have you received this order?')) return;
            await sendStatusUpdate(orderId, 'completed', {
                successTitle: 'Order Received',
                successMessage: 'Thank you! We\'ve marked this order as completed.',
                errorTitle: 'Update Failed',
                note: 'Customer mengonfirmasi pesanan sudah diterima.'
            });
        }

        async function adminUpdateOrderStatus(orderId, status) {
            if (status === 'cancelled' && !confirm('Mark order #' + orderId + ' as Cancelled?')) {
                return;
            }

            await sendStatusUpdate(orderId, status, {
                successTitle: 'Status Updated',
                successMessage: 'Order #' + orderId + ' marked as ' + getStatusLabel(status) + '.',
                errorTitle: 'Update Failed',
                note: 'Admin memperbarui status menjadi ' + getStatusLabel(status) + '.'
            });
        }

        async function addTrackingUpdate(orderId, status, note) {
            try {
                const payload = {};

                if (status && status.trim().length > 0) {
                    payload.status = status.trim();
                }

                if (note && note.trim().length > 0) {
                    payload.note = note.trim();
                }

                const response = await fetch('/orders/' + orderId + '/tracking', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification('success', 'Tracking Ditambahkan', 'Pembaruan tracking berhasil disimpan.');
                    setTimeout(() => {
                        location.reload();
                    }, 1200);
                } else {
                    showNotification('error', 'Gagal Menyimpan', result.message || 'Tidak dapat menyimpan pembaruan tracking.');
                }
            } catch (error) {
                showNotification('error', 'Error', 'Terjadi kesalahan: ' + error.message);
            }
        }

        // Delete Order Function
        async function deleteOrder(orderId, orderTotal) {
            if (!confirm(`Are you sure you want to DELETE order #${orderId} with total $${orderTotal}?\n\n⚠️ This action cannot be undone!`)) return;
            
            try {
                const response = await fetch('/orders/' + orderId, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    showNotification('success', 'Order Deleted', 'Order has been permanently deleted');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('error', 'Delete Failed', result.message || 'Failed to delete order');
                }
            } catch (error) {
                showNotification('error', 'Error', 'Error deleting order: ' + error.message);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.cancel-order-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    cancelOrder(orderId);
                });
            });

            document.querySelectorAll('.delete-order-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    const orderTotal = this.getAttribute('data-order-total');
                    deleteOrder(orderId, orderTotal);
                });
            });

            document.querySelectorAll('.receive-order-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    markOrderReceived(orderId);
                });
            });

            document.querySelectorAll('.apply-status-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    const controls = this.closest('.admin-status-controls');
                    const select = controls ? controls.querySelector('.admin-status-select') : null;
                    if (select) {
                        const newStatus = select.value;
                        adminUpdateOrderStatus(orderId, newStatus);
                    }
                });
            });

            document.querySelectorAll('.admin-quick-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    const status = this.getAttribute('data-status');
                    const controls = this.closest('.admin-status-controls');
                    const select = controls ? controls.querySelector('.admin-status-select') : null;
                    if (select) {
                        select.value = status;
                    }
                    adminUpdateOrderStatus(orderId, status);
                });
            });

            document.querySelectorAll('.add-tracking-update-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    const container = this.closest('.tracking-admin-form');
                    const statusSelect = container ? container.querySelector('.tracking-status-select') : null;
                    const noteField = container ? container.querySelector('.tracking-note') : null;
                    const statusValue = statusSelect ? statusSelect.value : '';
                    const noteValue = noteField ? noteField.value : '';

                    if (!statusValue && (!noteValue || noteValue.trim().length === 0)) {
                        showNotification('error', 'Form Belum Lengkap', 'Pilih status baru atau isi catatan pembaruan terlebih dahulu.');
                        return;
                    }

                    addTrackingUpdate(orderId, statusValue, noteValue);
                });
            });

            document.querySelectorAll('.order-status').forEach(statusElement => {
                const status = statusElement.textContent.trim().toLowerCase();
                statusElement.className = 'order-status status-' + status;
            });
        });

        window.cancelOrder = cancelOrder;
        window.deleteOrder = deleteOrder;
        window.markOrderReceived = markOrderReceived;
    </script>
</body>
</html>