<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        .orders-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        .order-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }
        .order-id {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }
        .order-status {
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-completed {
            background: #d4edda;
            color: #155724;
        }
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        .status-processing {
            background: #cce7ff;
            color: #004085;
        }
        .order-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 15px;
        }
        .order-products {
            margin-bottom: 15px;
        }
        .product-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #f5f5f5;
        }
        .order-total {
            text-align: right;
            font-size: 18px;
            font-weight: bold;
            color: #2c5aa0;
            margin-top: 10px;
        }
        .view-details {
            background: #007bff;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
        }
        .no-orders {
            text-align: center;
            padding: 40px;
            color: #666;
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <%- include('notification') %>
    <div class="orders-container">
        <h1><%= title %></h1>
        
        <% if (orders && orders.length > 0) { %>
            <% orders.forEach(function(order) { %>
                <div class="order-card">
                    <div class="order-header">
                        <div class="order-id">Order #<%= order.id %></div>
                        <div class="order-status status-<%= order.status %>">
                            <%= order.status %>
                        </div>
                    </div>
                    
                    <div class="order-details">
                        <div>
                            <strong>Customer:</strong> <%= order.userName %><br>
                            <strong>Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %>
                        </div>
                        <div>
                            <strong>Shipping Address:</strong><br>
                            <%= order.shippingAddress %>
                        </div>
                    </div>
                    
                    <div class="order-products">
                        <strong>Products:</strong>
                        <% order.products.forEach(function(product) { %>
                            <div class="product-item">
                                <span><%= product.productName %> Ã— <%= product.quantity %></span>
                                <span>$<%= (product.price * product.quantity).toFixed(2) %></span>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div class="order-total">
                        Total: $<%= order.totalAmount %>
                    </div>
                    
                    <div style="margin-top: 15px; display: flex; justify-content: space-between; align-items: center;">
                        <a href="/orders/<%= order.id %>" class="view-details">View Details</a>
                        <a href="/api/orders/<%= order.id %>" class="view-details" style="background: #28a745;">API</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="no-orders">
                <h3>No orders found</h3>
                <p>There are no orders in the system yet.</p>
            </div>
        <% } %>
    </div>
</body>
</html>