<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .checkout-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .checkout-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }
        
        .order-summary {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        
        .checkout-form {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #0a2540;
        }
        
        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e9ecef;
            border-radius: 6px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }
        
        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: #635BFF;
            box-shadow: 0 0 0 3px rgba(99, 91, 255, 0.1);
        }
        
        .address-option {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 15px;
            padding: 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .address-option:hover {
            border-color: #635BFF;
        }
        
        .address-option.selected {
            border-color: #635BFF;
            background: #f8f9ff;
        }
        
        .address-radio {
            margin-top: 3px;
        }
        
        .address-details h4 {
            margin: 0 0 5px 0;
            color: #635BFF;
        }
        
        .address-details p {
            margin: 2px 0;
            color: #666;
            font-size: 0.9rem;
        }
        
        .default-badge {
            background: #00D97E;
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.7rem;
            font-weight: 600;
            display: inline-block;
            margin-left: 8px;
        }
        
        .new-address-section {
            margin-top: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            display: none;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #635BFF, #5851ea);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 15px rgba(99, 91, 255, 0.3);
        }
        
        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 91, 255, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .btn-secondary {
            background: #635BFF;
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
            margin-top: 10px;
        }
        
        .btn-secondary:hover {
            background: #5851ea;
        }
        
        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #eaeaea;
        }
        
        .total {
            font-size: 1.2rem;
            font-weight: bold;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid #eaeaea;
        }

        @media (max-width: 768px) {
            .checkout-layout {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .checkout-container {
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <%- include('notification') %>
    
    <div class="checkout-container">
        <h1 style="color: #635BFF; margin-bottom: 30px;">
            <i class="fas fa-shopping-cart"></i> Checkout
            <% if (isBuyNow) { %>
                <span style="background: #00D97E; color: white; padding: 5px 15px; border-radius: 20px; font-size: 0.7em; margin-left: 10px;">
                    <i class="fas fa-bolt"></i> Direct Purchase
                </span>
            <% } %>
        </h1>

        <div class="checkout-layout">
            <!-- Order Summary -->
            <div class="order-summary">
                <h2 style="color: #635BFF; margin-bottom: 20px;">
                    <i class="fas fa-receipt"></i> <%= isBuyNow ? 'üì¶ Product Details' : 'Order Summary' %>
                </h2>
                
                <% if (cartItems && cartItems.length > 0) { %>
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <div style="flex: 1;">
                                <strong><%= item.product ? item.product.name : item.name %></strong>
                                <div style="color: #666; font-size: 0.9rem;">
                                    Qty: <%= item.quantity %> 
                                    <% if (isBuyNow) { %>
                                        <span style="color: #00D97E; margin-left: 5px;">‚úì</span>
                                    <% } %>
                                </div>
                            </div>
                            <div style="font-weight: bold; color: #635BFF;">
                                $<%= ((item.product ? item.product.price : item.price) * item.quantity).toFixed(2) %>
                            </div>
                        </div>
                    <% }) %>
                    <div class="total">
                        <i class="fas fa-dollar-sign"></i> Total: $<%= totalAmount.toFixed(2) %>
                    </div>
                <% } else { %>
                    <p>Your cart is empty</p>
                <% } %>
                
                <% if (!isBuyNow) { %>
                    <a href="/cart" class="btn-secondary" style="display: block; text-align: center;">
                        <i class="fas fa-arrow-left"></i> Back to Cart
                    </a>
                <% } else { %>
                    <a href="/products" class="btn-secondary" style="display: block; text-align: center;">
                        <i class="fas fa-arrow-left"></i> Back to Products
                    </a>
                <% } %>
            </div>

            <!-- Checkout Form -->
            <div class="checkout-form">
                <h2 style="color: #635BFF; margin-bottom: 20px;">
                    <i class="fas fa-shipping-fast"></i> <%= isBuyNow ? 'üöÄ Complete Your Purchase' : 'Shipping Information' %>
                </h2>
                
                <form id="checkoutForm">
                    <!-- Address Selection -->
                    <div class="form-group">
                        <label class="form-label">Select Shipping Address</label>
                        
                        <% if (addresses && addresses.length > 0) { %>
                            <% addresses.forEach(function(address) { %>
                                <div class="address-option <%= address.isDefault ? 'selected' : '' %>" 
                                     onclick="selectAddress('<%= address.id %>', this)">
                                    <input type="radio" name="addressId" value="<%= address.id %>" 
                                           class="address-radio" 
                                           <%= address.isDefault ? 'checked' : '' %>>
                                    <div class="address-details">
                                        <h4>
                                            <%= address.label %>
                                            <% if (address.isDefault) { %>
                                                <span class="default-badge">Default</span>
                                            <% } %>
                                        </h4>
                                        <p><strong><%= address.fullName %></strong> ‚Ä¢ <%= address.phone %></p>
                                        <p><%= address.street %></p>
                                        <p><%= address.city %><%= address.state ? ', ' + address.state : '' %> <%= address.postalCode %></p>
                                        <p><%= address.country %></p>
                                    </div>
                                </div>
                            <% }) %>
                            
                            <div class="address-option" onclick="selectAddress('new', this)">
                                <input type="radio" name="addressId" value="new" class="address-radio">
                                <div class="address-details">
                                    <h4>‚ûï Use New Address</h4>
                                    <p>Enter a new shipping address</p>
                                </div>
                            </div>
                        <% } else { %>
                            <div style="text-align: center; padding: 20px; background: #f8f9fa; border-radius: 8px;">
                                <p style="margin-bottom: 15px;">No addresses saved yet</p>
                                <a href="/addresses/add" class="btn-secondary">
                                    <i class="fas fa-plus"></i> Add Your First Address
                                </a>
                            </div>
                            <input type="hidden" name="addressId" value="new">
                        <% } %>
                    </div>

                    <!-- New Address Form (Hidden by Default) -->
                    <div id="newAddressSection" class="new-address-section">
                        <h4 style="color: #2c5aa0; margin-bottom: 15px;">
                            <i class="fas fa-map-marker-alt"></i> Enter New Address
                        </h4>
                        
                        <div class="form-group">
                            <label for="shippingAddress" class="form-label">Full Address</label>
                            <textarea id="shippingAddress" name="shippingAddress" class="form-textarea" 
                                      rows="4" placeholder="Enter complete shipping address..."></textarea>
                        </div>
                    </div>

                    <!-- Payment Method -->
                    <div class="form-group">
                        <label for="paymentMethod" class="form-label">
                            <i class="fas fa-credit-card"></i> Payment Method
                        </label>
                        <select id="paymentMethod" name="paymentMethod" class="form-select" required>
                            <option value="">-- Select Payment Method --</option>
                            <option value="cash">üíµ Cash on Delivery (Pay when item arrives)</option>
                            <option value="bank">üè¶ Bank Transfer (Transfer to our account)</option>
                            <option value="card">üí≥ Credit Card (Secure payment)</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-primary">
                        <i class="fas fa-check"></i> 
                        <% if (isBuyNow) { %>
                            Complete Purchase Now
                        <% } else { %>
                            Place Order
                        <% } %>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set default address selection
            const defaultAddress = document.querySelector('.address-option.selected input');
            if (defaultAddress) {
                selectAddress(defaultAddress.value, defaultAddress.closest('.address-option'));
            }

            // Form submission
            document.getElementById('checkoutForm').addEventListener('submit', function(e) {
                e.preventDefault();
                processCheckout();
            });
        });

        function selectAddress(addressId, element) {
            // Update radio button
            document.querySelectorAll('.address-option input').forEach(radio => {
                radio.checked = radio.value === addressId;
            });
            
            // Update visual selection
            document.querySelectorAll('.address-option').forEach(option => {
                option.classList.remove('selected');
            });
            element.classList.add('selected');
            
            // Show/hide new address section
            const newAddressSection = document.getElementById('newAddressSection');
            if (addressId === 'new') {
                newAddressSection.style.display = 'block';
                document.getElementById('shippingAddress').required = true;
            } else {
                newAddressSection.style.display = 'none';
                document.getElementById('shippingAddress').required = false;
            }
        }

        async function processCheckout() {
            try {
                const checkoutForm = document.getElementById('checkoutForm');
                if (!checkoutForm) {
                    showNotification('error', 'Error', 'Form not found');
                    return;
                }

                const addressId = document.querySelector('input[name="addressId"]:checked');
                const paymentMethod = document.getElementById('paymentMethod').value;
                const shippingAddress = document.getElementById('shippingAddress').value;

                // Validation
                if (!addressId) {
                    showNotification('error', 'Validation Error', 'Please select an address');
                    return;
                }

                if (!paymentMethod) {
                    showNotification('error', 'Validation Error', 'Please select a payment method');
                    return;
                }

                if (addressId.value === 'new' && !shippingAddress) {
                    showNotification('error', 'Validation Error', 'Please enter a new shipping address');
                    return;
                }

                const data = {
                    addressId: addressId.value !== 'new' ? parseInt(addressId.value) : 'new',
                    shippingAddress: addressId.value === 'new' ? shippingAddress : null,
                    paymentMethod: paymentMethod
                };

                // Disable button during request
                const submitBtn = checkoutForm.querySelector('button[type="submit"]');
                if (submitBtn) submitBtn.disabled = true;

                const response = await fetch('/cart/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('success', 'Order Placed!', 'Your order has been successfully placed');
                    setTimeout(() => {
                        window.location.href = result.redirectUrl || `/cart/checkout/success?order_id=${result.orderId}&total=${result.orderTotal}`;
                    }, 1500);
                } else {
                    if (submitBtn) submitBtn.disabled = false;
                    showNotification('error', 'Checkout Failed', result.message || 'Failed to place order');
                }
            } catch (error) {
                console.error('Checkout error:', error);
                const submitBtn = document.getElementById('checkoutForm')?.querySelector('button[type="submit"]');
                if (submitBtn) submitBtn.disabled = false;
                showNotification('error', 'Checkout Error', 'An error occurred during checkout. Please try again.');
            }
        }
    </script>
</body>
</html>