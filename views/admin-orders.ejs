<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #232946;
            color: #b8c1ec;
            min-height: 100vh;
        }
        
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #121629;
        }
        
        .admin-title {
            color: #fffffe;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: #121629;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            text-align: center;
            border-left: 6px solid #eebbc3;
        }
        
        .stat-card.pending {
            border-left-color: #eebbc3;
        }
        
        .stat-card.processing {
            border-left-color: #b8c1ec;
        }
        
        .stat-card.completed {
            border-left-color: #eebbc3;
        }
        
        .stat-card.cancelled {
            border-left-color: #eebbc3;
        }
        
        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #eebbc3;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #fffffe;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #b8c1ec;
            font-weight: 500;
        }
        
        .orders-table-container {
            background: #121629;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            overflow: hidden;
            border: 1px solid #121629;
        }
        
        .table-header {
            background: linear-gradient(135deg, #121629, #232946);
            color: #fffffe;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #eebbc3;
        }
        
        .table-title {
            margin: 0;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #fffffe;
        }
        
        .orders-list {
            padding: 20px;
            background: #232946;
        }
        
        .order-card {
            background: #121629;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #b8c1ec;
            transition: all 0.3s ease;
        }
        
        .order-card:hover {
            box-shadow: 0 4px 12px rgba(238, 187, 195, 0.2);
            transform: translateY(-2px);
            border-color: #eebbc3;
        }
        
        .order-header-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .order-id-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .order-id {
            font-size: 1.2rem;
            font-weight: bold;
            color: #fffffe;
        }
        
        .order-date {
            color: #b8c1ec;
            font-size: 0.9rem;
        }
        
        .order-status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .status-pending {
            background: #eebbc3;
            color: #232946;
        }
        
        .status-processing {
            background: #b8c1ec;
            color: #232946;
        }
        
        .status-shipped {
            background: #b8c1ec;
            color: #232946;
        }
        
        .status-completed {
            background: #eebbc3;
            color: #232946;
        }
        
        .status-cancelled {
            background: #eebbc3;
            color: #232946;
        }
        
        .order-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #b8c1ec;
        }
        
        .detail-item strong {
            color: #fffffe;
            min-width: 100px;
        }
        
        .order-products {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #b8c1ec;
        }
        
        .products-title {
            font-weight: 600;
            color: #fffffe;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .product-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #b8c1ec;
        }
        
        .product-item:last-child {
            border-bottom: none;
        }
        
        .product-name {
            color: #fffffe;
        }
        
        .product-quantity {
            color: #b8c1ec;
            font-size: 0.9rem;
        }
        
        .product-price {
            color: #eebbc3;
            font-weight: 600;
        }
        
        .order-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid #eebbc3;
        }
        
        .total-label {
            font-size: 1.1rem;
            font-weight: 600;
            color: #fffffe;
        }
        
        .total-amount {
            font-size: 1.5rem;
            font-weight: bold;
            color: #eebbc3;
        }
        
        .order-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 15px;
        }
        
        .btn-status {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            font-size: 0.85rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .btn-status:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(238, 187, 195, 0.3);
        }
        
        .btn-status-pending {
            background: #eebbc3;
            color: #232946;
        }
        
        .btn-status-processing {
            background: #b8c1ec;
            color: #232946;
        }
        
        .btn-status-shipped {
            background: #b8c1ec;
            color: #232946;
        }
        
        .btn-status-completed {
            background: #eebbc3;
            color: #232946;
        }
        
        .btn-status-cancelled {
            background: #eebbc3;
            color: #232946;
        }
        
        .btn-view-details {
            background: #eebbc3;
            color: #232946;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 0.85rem;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .btn-view-details:hover {
            background: #fffffe;
            color: #232946;
            transform: translateY(-1px);
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 40px;
            color: #b8c1ec;
        }
        
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
            color: #eebbc3;
        }
        
        .empty-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #fffffe;
        }
        
        .empty-message {
            margin-bottom: 25px;
            line-height: 1.6;
            color: #b8c1ec;
        }

        .btn-admin-action {
            background: #eebbc3;
            color: #232946;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .btn-admin-action:hover {
            background: #fffffe;
            color: #232946;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(238, 187, 195, 0.3);
        }

        .btn-status:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            background: #121629 !important;
            color: #b8c1ec !important;
        }

        .table-header span {
            color: #b8c1ec;
        }

        @media (max-width: 768px) {
            .admin-container {
                padding: 15px;
            }
            
            .admin-header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .order-header-info {
                flex-direction: column;
            }
            
            .order-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    
    <div class="admin-container">
        <div class="admin-header">
            <h1 class="admin-title">
                <i class="fas fa-clipboard-list"></i> Orders Management
            </h1>
            <div style="display: flex; gap: 10px;">
                <a href="/admin" class="btn-admin-action" style="background: #6c757d;">
                    <i class="fas fa-chart-bar"></i> Dashboard
                </a>
                <a href="/admin/products" class="btn-admin-action" style="background: #28a745;">
                    <i class="fas fa-box"></i> Products
                </a>
                <a href="/admin/users" class="btn-admin-action" style="background: #17a2b8;">
                    <i class="fas fa-users"></i> Users
                </a>
            </div>
        </div>

        <!-- Orders Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-number"><%= orders ? orders.length : 0 %></div>
                <div class="stat-label">Total Orders</div>
            </div>
            
            <div class="stat-card pending">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-number"><%= orders ? orders.filter(o => o.status === 'pending').length : 0 %></div>
                <div class="stat-label">Pending</div>
            </div>
            
            <div class="stat-card processing">
                <div class="stat-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <div class="stat-number"><%= orders ? orders.filter(o => o.status === 'processing').length : 0 %></div>
                <div class="stat-label">Processing</div>
            </div>
            
            <div class="stat-card completed">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-number"><%= orders ? orders.filter(o => o.status === 'completed').length : 0 %></div>
                <div class="stat-label">Completed</div>
            </div>
            
            <div class="stat-card cancelled">
                <div class="stat-icon">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="stat-number"><%= orders ? orders.filter(o => o.status === 'cancelled').length : 0 %></div>
                <div class="stat-label">Cancelled</div>
            </div>
        </div>

        <% if (orders && orders.length > 0) { %>
            <div class="orders-table-container">
                <div class="table-header">
                    <h2 class="table-title">
                        <i class="fas fa-list"></i> All Orders
                    </h2>
                    <span style="opacity: 0.9; display: flex; align-items: center; gap: 5px;">
                        <i class="fas fa-chart-bar"></i> <%= orders.length %> <%= orders.length === 1 ? 'order' : 'orders' %>
                    </span>
                </div>
                
                <div class="orders-list">
                    <% orders.forEach(function(order) { %>
                        <div class="order-card" data-order-id="<%= order.id %>">
                            <div class="order-header-info">
                                <div>
                                    <div class="order-id-section">
                                        <span class="order-id">Order #<%= order.id %></span>
                                        <span class="order-status-badge status-<%= order.status || 'pending' %>">
                                            <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                                            <%= order.status || 'pending' %>
                                        </span>
                                    </div>
                                    <div class="order-date">
                                        <i class="fas fa-calendar"></i> <%= new Date(order.createdAt || order.date || Date.now()).toLocaleDateString() %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="order-details">
                                <div class="detail-item">
                                    <i class="fas fa-user"></i>
                                    <strong>Customer:</strong>
                                    <span><%= order.userName || 'Unknown User' %></span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-envelope"></i>
                                    <strong>Email:</strong>
                                    <span><%= order.userEmail || 'N/A' %></span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-box"></i>
                                    <strong>Items:</strong>
                                    <span><%= (order.products || order.items || []).length %> item(s)</span>
                                </div>
                            </div>
                            
                            <% if (order.products && order.products.length > 0) { %>
                                <div class="order-products">
                                    <div class="products-title">
                                        <i class="fas fa-shopping-bag"></i> Products
                                    </div>
                                    <% order.products.forEach(function(product) { %>
                                        <div class="product-item">
                                            <div>
                                                <div class="product-name"><%= product.productName || product.name || 'Unknown Product' %></div>
                                                <div class="product-quantity">Qty: <%= product.quantity || 1 %></div>
                                            </div>
                                            <div class="product-price">
                                                <%= currency === 'IDR' ? 'Rp' : '$' %> <%= (product.price || 0).toLocaleString() %>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } %>
                            
                            <div class="order-total">
                                <span class="total-label">Total Amount:</span>
                                <span class="total-amount">
                                    <%= currency === 'IDR' ? 'Rp' : '$' %> <%= (order.totalAmount || order.total || 0).toLocaleString() %>
                                </span>
                            </div>
                            
                            <div class="order-actions">
                                <button class="btn-status btn-status-pending update-status-btn" 
                                        data-order-id="<%= order.id %>" 
                                        data-status="pending"
                                        <%= order.status === 'pending' ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-clock"></i> Pending
                                </button>
                                <button class="btn-status btn-status-processing update-status-btn" 
                                        data-order-id="<%= order.id %>" 
                                        data-status="processing"
                                        <%= order.status === 'processing' ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-cog"></i> Processing
                                </button>
                                <button class="btn-status btn-status-shipped update-status-btn" 
                                        data-order-id="<%= order.id %>" 
                                        data-status="shipped"
                                        <%= order.status === 'shipped' ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-shipping-fast"></i> Shipped
                                </button>
                                <button class="btn-status btn-status-completed update-status-btn" 
                                        data-order-id="<%= order.id %>" 
                                        data-status="completed"
                                        <%= order.status === 'completed' ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-check"></i> Completed
                                </button>
                                <button class="btn-status btn-status-cancelled update-status-btn" 
                                        data-order-id="<%= order.id %>" 
                                        data-status="cancelled"
                                        <%= order.status === 'cancelled' ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-times"></i> Cancelled
                                </button>
                                <a href="/orders/<%= order.id %>" class="btn-view-details" target="_blank">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h3 class="empty-title">No Orders Found</h3>
                <p class="empty-message">There are no orders in the system yet.</p>
            </div>
        <% } %>
    </div>

    <%- include('notification') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update order status
            document.querySelectorAll('.update-status-btn').forEach(button => {
                button.addEventListener('click', function() {
                    if (this.disabled) return;
                    
                    const orderId = this.getAttribute('data-order-id');
                    const status = this.getAttribute('data-status');
                    const orderCard = this.closest('.order-card');
                    
                    if (!confirm(`Are you sure you want to update order #${orderId} to "${status}"?`)) {
                        return;
                    }
                    
                    // Disable button during request
                    this.disabled = true;
                    this.style.opacity = '0.5';
                    this.style.cursor = 'not-allowed';
                    
                    fetch(`/admin/orders/${orderId}/status`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ status: status })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showNotification('success', 'Success!', `Order #${orderId} status updated to ${status}`);
                            
                            // Update status badge
                            const statusBadge = orderCard.querySelector('.order-status-badge');
                            if (statusBadge) {
                                statusBadge.className = `order-status-badge status-${status}`;
                                statusBadge.innerHTML = `<i class="fas fa-circle" style="font-size: 0.5rem;"></i> ${status}`;
                            }
                            
                            // Update all buttons
                            orderCard.querySelectorAll('.update-status-btn').forEach(btn => {
                                btn.disabled = false;
                                btn.style.opacity = '1';
                                btn.style.cursor = 'pointer';
                            });
                            
                            // Disable current button
                            this.disabled = true;
                            this.style.opacity = '0.5';
                            this.style.cursor = 'not-allowed';
                            
                            // Reload page after 1.5 seconds to update stats
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        } else {
                            showNotification('error', 'Failed', data.message || 'Failed to update order status');
                            this.disabled = false;
                            this.style.opacity = '1';
                            this.style.cursor = 'pointer';
                        }
                    })
                    .catch(error => {
                        showNotification('error', 'Error', 'Error updating order status: ' + error.message);
                        this.disabled = false;
                        this.style.opacity = '1';
                        this.style.cursor = 'pointer';
                    });
                });
            });
        });
    </script>
</body>
</html>

