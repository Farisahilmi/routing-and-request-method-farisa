<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #eaeaea;
        }
        
        .admin-title {
            color: #2c5aa0;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            text-align: center;
            border-left: 6px solid #2c5aa0;
        }
        
        .stat-card.admin {
            border-left-color: #28a745;
        }
        
        .stat-card.customer {
            border-left-color: #17a2b8;
        }
        
        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #2c5aa0;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #2c5aa0;
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #666;
            font-weight: 500;
        }
        
        .users-table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            overflow: hidden;
            border: 1px solid #eaeaea;
        }
        
        .table-header {
            background: linear-gradient(135deg, #2c5aa0, #3a7bd5);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .table-title {
            margin: 0;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            background: #f8f9fa;
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            color: #495057;
            border-bottom: 2px solid #e9ecef;
            font-size: 14px;
            white-space: nowrap;
        }
        
        td {
            padding: 16px 20px;
            border-bottom: 1px solid #e9ecef;
            color: #666;
            font-size: 14px;
            vertical-align: middle;
        }
        
        tr:hover {
            background: #f8f9fa;
        }
        
        .role-badge {
            padding: 6px 12px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 500;
            text-transform: uppercase;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
        
        .role-admin {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .role-customer {
            background: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: nowrap;
        }
        
        .btn-sm {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-size: 11px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 4px;
            white-space: nowrap;
        }
        
        .btn-promote {
            background: #28a745;
            color: white;
        }
        
        .btn-promote:hover {
            background: #218838;
            transform: translateY(-1px);
        }
        
        .btn-demote {
            background: #ffc107;
            color: black;
        }
        
        .btn-demote:hover {
            background: #e0a800;
            transform: translateY(-1px);
        }
        
        .btn-delete {
            background: #dc3545;
            color: white;
        }
        
        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-1px);
        }
        
        .btn-disabled {
            background: #6c757d;
            color: white;
            cursor: not-allowed;
            opacity: 0.6;
        }
        
        .btn-disabled:hover {
            transform: none;
        }
        
        .user-email {
            color: #2c5aa0;
            font-weight: 500;
        }
        
        .user-id {
            font-size: 12px;
            color: #999;
            display: flex;
            align-items: center;
            gap: 4px;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 40px;
            color: #666;
        }
        
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }
        
        .empty-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #2c5aa0;
        }
        
        .empty-message {
            margin-bottom: 25px;
            line-height: 1.6;
        }

        /* API Testing Section */
        .api-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            padding: 30px;
            margin-top: 40px;
            border-left: 6px solid #17a2b8;
        }

        .api-title {
            color: #2c5aa0;
            margin-top: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .api-tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #eaeaea;
            flex-wrap: wrap;
        }

        .api-tab-btn {
            padding: 12px 20px;
            border: none;
            background: transparent;
            color: #666;
            cursor: pointer;
            font-weight: 600;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
            margin-bottom: -2px;
        }

        .api-tab-btn.active {
            color: #17a2b8;
            border-bottom-color: #17a2b8;
        }

        .api-tab-btn:hover {
            color: #2c5aa0;
        }

        .api-form {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .form-group-inline {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }

        .form-group-inline input,
        .form-group-inline select {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            font-family: monospace;
        }

        .form-group-inline label {
            display: block;
            font-weight: 600;
            margin-bottom: 5px;
            color: #495057;
            font-size: 13px;
        }

        .btn-api {
            background: #17a2b8;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-api:hover {
            background: #138496;
            transform: translateY(-2px);
        }

        .btn-api-danger {
            background: #dc3545;
        }

        .btn-api-danger:hover {
            background: #c82333;
        }

        .api-response {
            background: #2d2d2d;
            color: #4ec9b0;
            padding: 20px;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
            font-size: 12px;
            overflow-x: auto;
            margin-top: 20px;
            min-height: 100px;
            max-height: 500px;
            overflow-y: auto;
            border: 1px solid #444;
            white-space: pre-wrap;
            word-wrap: break-word;
            line-height: 1.5;
        }

        /* Syntax highlighting for JSON */
        .json-key {
            color: #9cdcfe;
        }

        .json-string {
            color: #ce9178;
        }

        .json-number {
            color: #b5cea8;
        }

        .json-boolean {
            color: #569cd6;
        }

        .json-null {
            color: #569cd6;
        }

        /* Response status indicators */
        .response-status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .response-status.success {
            background: #51cf66;
            color: #0b3d0b;
        }

        .response-status.error {
            background: #ff6b6b;
            color: #5a0000;
        }

        .response-status.loading {
            background: #ffc107;
            color: #664d00;
        }

        .copy-btn {
            background: #4ec9b0;
            color: #2d2d2d;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 11px;
            font-weight: 600;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        .copy-btn:hover {
            background: #51cf66;
        }

        .api-response.loading {
            color: #ffc107;
        }

        .api-response.error {
            color: #ff6b6b;
        }

        .api-response.success {
            color: #51cf66;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .method-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 700;
            margin-right: 10px;
        }

        .method-get {
            background: #d1ecf1;
            color: #0c5460;
        }

        .method-put {
            background: #fff3cd;
            color: #856404;
        }

        .method-post {
            background: #d4edda;
            color: #155724;
        }

        .method-delete {
            background: #f8d7da;
            color: #721c24;
        }

        .api-endpoint {
            background: #f8f9fa;
            padding: 10px 15px;
            border-radius: 6px;
            font-family: monospace;
            font-size: 13px;
            margin: 10px 0;
            border-left: 4px solid #17a2b8;
        }

        @media (max-width: 768px) {
            .admin-container {
                padding: 15px;
            }
            
            .admin-header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .users-table-container {
                overflow-x: auto;
            }
            
            table {
                min-width: 800px;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 5px;
            }
            
            .btn-sm {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    
    <div class="admin-container">
        <div class="admin-header">
            <h1 class="admin-title">
                <i class="fas fa-users"></i> <%= t.users_management || 'Users Management' %>
            </h1>
            <div style="display: flex; gap: 10px;">
                <a href="/admin" class="btn-admin-action" style="background: #6c757d;">
                    <i class="fas fa-chart-bar"></i> Dashboard
                </a>
                <a href="/admin/products" class="btn-admin-action" style="background: #28a745;">
                    <i class="fas fa-box"></i> Products
                </a>
                <a href="/admin/orders" class="btn-admin-action" style="background: #17a2b8;">
                    <i class="fas fa-clipboard-list"></i> Orders
                </a>
            </div>
        </div>

        <!-- Users Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-number"><%= userStats.total %></div>
                <div class="stat-label"><%= t.total_users || 'Total Users' %></div>
            </div>
            
            <div class="stat-card admin">
                <div class="stat-icon">
                    <i class="fas fa-crown"></i>
                </div>
                <div class="stat-number"><%= userStats.admins %></div>
                <div class="stat-label"><%= t.admin_users || 'Admin Users' %></div>
            </div>
            
            <div class="stat-card customer">
                <div class="stat-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="stat-number"><%= userStats.customers %></div>
                <div class="stat-label"><%= t.customer_users || 'Customer Users' %></div>
            </div>
        </div>

        <% if (users && users.length > 0) { %>
            <div class="users-table-container">
                <div class="table-header">
                    <h2 class="table-title">
                        <i class="fas fa-list"></i> <%= t.users_management || 'Users List' %>
                    </h2>
                    <span style="opacity: 0.9; display: flex; align-items: center; gap: 5px;">
                        <i class="fas fa-chart-bar"></i> <%= users.length %> <%= users.length === 1 ? 'user' : 'users' %>
                    </span>
                </div>
                
                <table>
                    <thead>
                        <tr>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-id-card"></i> <%= t.user_id || 'User ID' %>
                                </div>
                            </th>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-user"></i> <%= t.username || 'Username' %>
                                </div>
                            </th>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-envelope"></i> <%= t.email || 'Email' %>
                                </div>
                            </th>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-user-tag"></i> <%= t.role || 'Role' %>
                                </div>
                            </th>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-calendar"></i> <%= t.created_at || 'Created At' %>
                                </div>
                            </th>
                            <th>
                                <div style="display: flex; align-items: center; gap: 5px;">
                                    <i class="fas fa-cog"></i> <%= t.actions || 'Actions' %>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <div class="user-id">
                                        <i class="fas fa-hashtag"></i> <%= user.id %>
                                    </div>
                                </td>
                                <td style="font-weight: 500;">
                                    <%= user.username %>
                                    <% if (user.id === user.id) { %>
                                        <div style="font-size: 11px; color: #28a745; margin-top: 2px;">
                                            <i class="fas fa-star"></i> Current User
                                        </div>
                                    <% } %>
                                </td>
                                <td class="user-email"><%= user.email %></td>
                                <td>
                                    <span class="role-badge <%= user.role === 'admin' ? 'role-admin' : 'role-customer' %>">
                                        <% if (user.role === 'admin') { %>
                                            <i class="fas fa-crown"></i>
                                        <% } else { %>
                                            <i class="fas fa-user"></i>
                                        <% } %>
                                        <%= user.role %>
                                    </span>
                                </td>
                                <td>
                                    <%= new Date(user.createdAt).toLocaleDateString() %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <% if (user.role === 'customer') { %>
                                            <button class="btn-sm btn-promote promote-user-btn" 
                                                    data-user-id="<%= user.id %>"
                                                    data-user-name="<%= user.username %>">
                                                <i class="fas fa-crown"></i> <%= t.promote_to_admin || 'Promote to Admin' %>
                                            </button>
                                        <% } else { %>
                                            <button class="btn-sm btn-demote demote-user-btn" 
                                                    data-user-id="<%= user.id %>"
                                                    data-user-name="<%= user.username %>"
                                                    <%= userStats.admins <= 1 ? 'disabled' : '' %>>
                                                <i class="fas fa-user"></i> <%= t.demote_to_customer || 'Demote to Customer' %>
                                            </button>
                                        <% } %>
                                        
                                        <button class="btn-sm btn-delete delete-user-btn" 
                                                data-user-id="<%= user.id %>"
                                                data-user-name="<%= user.username %>"
                                                <%= user.id === user.id || (user.role === 'admin' && userStats.admins <= 1) ? 'disabled' : '' %>>
                                            <i class="fas fa-trash"></i> <%= t.delete_user || 'Delete' %>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="empty-title"><%= t.no_users || 'No Users Found' %></h3>
                <p class="empty-message"><%= t.no_users_message || 'There are no users in the system yet.' %></p>
            </div>
        <% } %>

        <!-- API Testing Section -->
        <div class="api-section">
            <h2 class="api-title">
                <i class="fas fa-code"></i> API Testing & Documentation
            </h2>
            <p style="color: #666; line-height: 1.6;">
                Test the admin user management API directly from this dashboard. All endpoints require admin authentication.
                <a href="/API_ADMIN_USERS.md" target="_blank" style="color: #17a2b8; text-decoration: none;">
                    <i class="fas fa-book"></i> View Full Documentation
                </a>
            </p>

            <!-- API Tabs -->
            <div class="api-tabs">
                <button class="api-tab-btn active" data-tab="get-all">
                    <span class="method-badge method-get">GET</span> All Users
                </button>
                <button class="api-tab-btn" data-tab="get-one">
                    <span class="method-badge method-get">GET</span> Single User
                </button>
                <button class="api-tab-btn" data-tab="put">
                    <span class="method-badge method-put">PUT</span> Update User
                </button>
                <button class="api-tab-btn" data-tab="password">
                    <span class="method-badge method-post">POST</span> Change Password
                </button>
                <button class="api-tab-btn" data-tab="delete">
                    <span class="method-badge method-delete">DELETE</span> Delete User
                </button>
            </div>

            <!-- GET ALL Users -->
            <div id="get-all" class="tab-content active">
                <h3>Get All Users</h3>
                <div class="api-endpoint">
                    <span class="method-badge method-get">GET</span> /api/users
                </div>
                <div class="api-form">
                    <p style="margin: 0 0 15px 0; color: #666; font-size: 13px;">
                        <i class="fas fa-info-circle"></i> Retrieve all users in the system. No parameters required.
                    </p>
                    <button class="btn-api" onclick="testGetAllUsers()">
                        <i class="fas fa-play"></i> Execute GET Request
                    </button>
                </div>
                <div class="api-response" id="response-get-all"></div>
            </div>

            <!-- GET Single User -->
            <div id="get-one" class="tab-content">
                <h3>Get Single User</h3>
                <div class="api-endpoint">
                    <span class="method-badge method-get">GET</span> /api/users/:id
                </div>
                <div class="api-form">
                    <div class="form-group-inline">
                        <div>
                            <label>User ID</label>
                            <input type="text" id="get-user-id" placeholder="e.g., 2" value="2">
                        </div>
                    </div>
                    <button class="btn-api" onclick="testGetUser()">
                        <i class="fas fa-play"></i> Execute GET Request
                    </button>
                </div>
                <div class="api-response" id="response-get-one"></div>
            </div>

            <!-- PUT Update User -->
            <div id="put" class="tab-content">
                <h3>Update User</h3>
                <div class="api-endpoint">
                    <span class="method-badge method-put">PUT</span> /api/users/:id
                </div>
                <div class="api-form">
                    <div class="form-group-inline">
                        <div>
                            <label>User ID</label>
                            <input type="text" id="update-user-id" placeholder="e.g., 2" value="2">
                        </div>
                        <div>
                            <label>Username</label>
                            <input type="text" id="update-username" placeholder="New username">
                        </div>
                        <div>
                            <label>Email</label>
                            <input type="email" id="update-email" placeholder="new@email.com">
                        </div>
                        <div>
                            <label>Role</label>
                            <select id="update-role">
                                <option value="">-- Select Role --</option>
                                <option value="admin">Admin</option>
                                <option value="customer">Customer</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn-api" onclick="testUpdateUser()">
                        <i class="fas fa-play"></i> Execute PUT Request
                    </button>
                </div>
                <div class="api-response" id="response-put"></div>
            </div>

            <!-- POST Change Password -->
            <div id="password" class="tab-content">
                <h3>Change User Password</h3>
                <div class="api-endpoint">
                    <span class="method-badge method-post">POST</span> /api/users/:id/change-password
                </div>
                <div class="api-form">
                    <div class="form-group-inline">
                        <div>
                            <label>User ID</label>
                            <input type="text" id="password-user-id" placeholder="e.g., 2" value="2">
                        </div>
                        <div>
                            <label>New Password</label>
                            <input type="password" id="password-new" placeholder="Enter new password">
                        </div>
                    </div>
                    <button class="btn-api" onclick="testChangePassword()">
                        <i class="fas fa-play"></i> Execute POST Request
                    </button>
                </div>
                <div class="api-response" id="response-password"></div>
            </div>

            <!-- DELETE User -->
            <div id="delete" class="tab-content">
                <h3>Delete User</h3>
                <div class="api-endpoint">
                    <span class="method-badge method-delete">DELETE</span> /api/users/:id
                </div>
                <div class="api-form">
                    <div class="form-group-inline">
                        <div>
                            <label>User ID</label>
                            <input type="text" id="delete-user-id" placeholder="e.g., 3" value="3">
                        </div>
                    </div>
                    <p style="color: #721c24; background: #f8d7da; padding: 10px; border-radius: 6px; margin-bottom: 15px; font-size: 13px;">
                        <i class="fas fa-exclamation-triangle"></i> Warning: This action cannot be undone!
                    </p>
                    <button class="btn-api btn-api-danger" onclick="testDeleteUser()">
                        <i class="fas fa-trash"></i> Execute DELETE Request
                    </button>
                </div>
                <div class="api-response" id="response-delete"></div>
            </div>
        </div>
    </div>

    <%- include('notification') %>

    <script>
        // Tab Navigation
        document.querySelectorAll('.api-tab-btn').forEach(button => {
            button.addEventListener('click', function() {
                const tabName = this.getAttribute('data-tab');
                
