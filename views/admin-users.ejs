        // Pretty Print JSON Function
        function prettyPrintJSON(data, status = 'success') {
            let output = '';
            
            // Add status badge
            const statusClass = status === 'success' ? 'success' : status === 'error' ? 'error' : 'loading';
            const statusText = status === 'success' ? '✓ SUCCESS' : status === 'error' ? '✗ ERROR' : '⏳ LOADING';
            output += `<span class="response-status ${statusClass}">${statusText}</span>\n`;
            
            // Pretty print JSON
            output += JSON.stringify(data, null, 2);
            
            return output;
        }

        // Highlight JSON with colors (simple version)
        function highlightJSON(text) {
            // This is a simple implementation - you could use a library for more advanced highlighting
            return text
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, 
                    (match) => {
                        let cls = 'json-number';
                        if (/^"/.test(match)) {
                            if (/:$/.test(match)) {
                                cls = 'json-key';
                            } else {
                                cls = 'json-string';
                            }
                        } else if (/true|false/.test(match)) {
                            cls = 'json-boolean';
                        } else if (/null/.test(match)) {
                            cls = 'json-null';
                        }
                        return `<span class="${cls}">${match}</span>`;
                    });
        }

