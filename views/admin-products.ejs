<!DOCTYPE html>
<html>
<head>
    <title>Admin Products - Simple Store</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #eaeaea;
        }
        
        .admin-actions {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }
        
        .btn-admin-action {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }
        
        .btn-admin-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }
        
        .btn-danger:hover {
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        }
        
        .products-table {
            width: 100%;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            overflow: hidden;
            border: 1px solid #eaeaea;
        }
        
        .table-header {
            background: linear-gradient(135deg, #2c5aa0, #3a7bd5);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            background: #f8f9fa;
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            color: #495057;
            border-bottom: 2px solid #e9ecef;
        }
        
        td {
            padding: 16px 20px;
            border-bottom: 1px solid #e9ecef;
            color: #666;
        }
        
        tr:hover {
            background: #f8f9fa;
        }
        
        .product-image-small {
            width: 60px;
            height: 60px;
            background: #f5f5f5;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            color: #666;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
        }
        
        .btn-sm {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-size: 12px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-edit {
            background: #ffc107;
            color: black;
        }
        
        .btn-edit:hover {
            background: #e0a800;
        }
        
        .btn-delete {
            background: #dc3545;
            color: white;
        }
        
        .btn-delete:hover {
            background: #c82333;
        }
        
        .stock-low {
            color: #dc3545;
            font-weight: bold;
        }
        
        .stock-good {
            color: #28a745;
            font-weight: bold;
        }

        /* Currency Switcher */
        .settings-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .currency-switcher {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .currency-btn {
            padding: 8px 16px;
            border: 2px solid #e9ecef;
            border-radius: 6px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .currency-btn.active {
            background: #2c5aa0;
            color: white;
            border-color: #2c5aa0;
        }
        
        .currency-btn:hover {
            border-color: #2c5aa0;
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    
    <div class="admin-container">
        <div class="admin-header">
            <h1 style="margin: 0; color: #2c5aa0; display: flex; align-items: center; gap: 10px;">
                üëë Admin Products Management
            </h1>
            <div style="display: flex; gap: 10px;">
                <a href="/admin" class="btn-admin-action" style="background: #6c757d;">
                    üìä Dashboard
                </a>
                <a href="/products" class="btn-admin-action" style="background: #17a2b8;">
                    üè™ View Store
                </a>
            </div>
        </div>

        <!-- Currency Switcher -->
        <div class="settings-bar">
            <div class="currency-switcher">
                <span style="font-weight: 600;">üí∞ Currency:</span>
                <button class="currency-btn <%= currency === 'IDR' ? 'active' : '' %>" onclick="switchCurrency('IDR')">
                    IDR (Rp)
                </button>
                <button class="currency-btn <%= currency === 'USD' ? 'active' : '' %>" onclick="switchCurrency('USD')">
                    USD ($)
                </button>
            </div>
        </div>

        <div class="admin-actions">
            <button class="btn-admin-action" id="showAddProductBtn">
                <span>‚ûï</span>
                Add New Product
            </button>
            <button class="btn-admin-action" style="background: #17a2b8;" id="exportProductsBtn">
                <span>üì§</span>
                Export Products
            </button>
        </div>

        <!-- Add Product Form (Hidden by Default) -->
        <div id="addProductForm" style="display: none; background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08); margin-bottom: 30px;">
            <h3 style="margin: 0 0 20px 0; color: #2c5aa0;">Add New Product</h3>
            <form id="productForm">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Product Name</label>
                        <input type="text" id="productName" style="width: 100%; padding: 10px; border: 2px solid #e9ecef; border-radius: 6px;" required>
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">
                            Price 
                            <% if (currency === 'IDR') { %>
                                (Rp)
                            <% } else { %>
                                ($)
                            <% } %>
                        </label>
                        <input type="number" id="productPrice" step="0.01" style="width: 100%; padding: 10px; border: 2px solid #e9ecef; border-radius: 6px;" required>
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Category</label>
                        <input type="text" id="productCategory" style="width: 100%; padding: 10px; border: 2px solid #e9ecef; border-radius: 6px;" required>
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Stock</label>
                        <input type="number" id="productStock" style="width: 100%; padding: 10px; border: 2px solid #e9ecef; border-radius: 6px;" required>
                    </div>
                </div>
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600;">Description</label>
                    <textarea id="productDescription" style="width: 100%; padding: 10px; border: 2px solid #e9ecef; border-radius: 6px; height: 80px;" required></textarea>
                </div>
                <div style="display: flex; gap: 10px;">
                    <button type="submit" class="btn-admin-action">Add Product</button>
                    <button type="button" class="btn-admin-action" style="background: #6c757d;" id="cancelAddProductBtn">Cancel</button>
                </div>
            </form>
        </div>

        <% if (products && products.length > 0) { %>
            <div class="products-table">
                <div class="table-header">
                    <h2 style="margin: 0;">üì¶ Product Inventory</h2>
                    <span style="opacity: 0.9;">Total: <%= products.length %> products</span>
                </div>
                
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(function(product) { %>
                            <tr>
                                <td>
                                    <div class="product-image-small">
                                        <% if (product.image && product.image !== '/images/default.jpg') { %>
                                            <img src="<%= product.image %>" alt="<%= product.name %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                                        <% } else { %>
                                            üñºÔ∏è
                                        <% } %>
                                    </div>
                                </td>
                                <td style="font-weight: 500;">
                                    <div><%= product.name %></div>
                                    <div style="font-size: 12px; color: #999; margin-top: 4px;">
                                        ID: <%= product.id %>
                                    </div>
                                </td>
                                <td><%= product.category %></td>
                                <td style="font-weight: bold; color: #2c5aa0;">
                                    <% if (currency === 'IDR') { %>
                                        Rp <%= (product.price * 15000).toLocaleString('id-ID') %>
                                    <% } else { %>
                                        $<%= product.price %>
                                    <% } %>
                                </td>
                                <td class="<%= product.stock <= 5 ? 'stock-low' : 'stock-good' %>">
                                    <%= product.stock %>
                                </td>
                                <td>
                                    <% if (product.stock === 0) { %>
                                        <span style="color: #dc3545; font-weight: bold;">Out of Stock</span>
                                    <% } else if (product.stock <= 5) { %>
                                        <span style="color: #fd7e14; font-weight: bold;">Low Stock</span>
                                    <% } else { %>
                                        <span style="color: #28a745; font-weight: bold;">In Stock</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-sm btn-edit edit-product-btn" data-product-id="<%= product.id %>">
                                            ‚úèÔ∏è Edit
                                        </button>
                                        <button class="btn-sm btn-delete delete-product-btn" data-product-id="<%= product.id %>">
                                            üóëÔ∏è Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 60px 20px; background: white; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);">
                <h3 style="color: #666; margin-bottom: 15px;">No Products Found</h3>
                <p style="color: #999; margin-bottom: 20px;">Get started by adding your first product!</p>
                <button class="btn-admin-action" id="showAddProductEmptyBtn">
                    <span>‚ûï</span>
                    Add Your First Product
                </button>
            </div>
        <% } %>
    </div>

    <%- include('notification') %>

    <script>
        // Event Listeners untuk tombol
        document.addEventListener('DOMContentLoaded', function() {
            // Show Add Product Form
            document.getElementById('showAddProductBtn')?.addEventListener('click', showAddProductForm);
            document.getElementById('showAddProductEmptyBtn')?.addEventListener('click', showAddProductForm);
            
            // Hide Add Product Form
            document.getElementById('cancelAddProductBtn')?.addEventListener('click', hideAddProductForm);
            
            // Form Submission
            document.getElementById('productForm')?.addEventListener('submit', addProduct);
            
            // Export Products
            document.getElementById('exportProductsBtn')?.addEventListener('click', exportProducts);
            
            // Edit Buttons
            document.querySelectorAll('.edit-product-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    editProduct(productId);
                });
            });
            
            // Delete Buttons
            document.querySelectorAll('.delete-product-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    deleteProduct(productId);
                });
            });
        });

        function showAddProductForm() {
            document.getElementById('addProductForm').style.display = 'block';
        }
        
        function hideAddProductForm() {
            document.getElementById('addProductForm').style.display = 'none';
            document.getElementById('productForm').reset();
        }
        
        async function addProduct(event) {
            event.preventDefault();
            
            const productData = {
                name: document.getElementById('productName').value,
                description: document.getElementById('productDescription').value,
                price: parseFloat(document.getElementById('productPrice').value),
                category: document.getElementById('productCategory').value,
                stock: parseInt(document.getElementById('productStock').value),
                image: '/images/default.jpg'
            };
            
            try {
                const response = await fetch('/admin/products', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(productData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('success', 'Success!', 'Product added successfully!');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('error', 'Failed', 'Failed to add product: ' + result.message);
                }
            } catch (error) {
                showNotification('error', 'Error', 'Error adding product');
            }
        }
        
        function editProduct(productId) {
            showNotification('info', 'Coming Soon', 'Edit feature will be available soon!');
            // window.location.href = '/admin/products/edit/' + productId;
        }
        
        async function deleteProduct(productId) {
            if (!confirm('Are you sure you want to delete this product? This action cannot be undone.')) {
                return;
            }
            
            try {
                const response = await fetch('/admin/products/' + productId, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('success', 'Success!', 'Product deleted successfully!');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('error', 'Failed', 'Failed to delete product: ' + result.message);
                }
            } catch (error) {
                showNotification('error', 'Error', 'Error deleting product');
            }
        }
        
        function exportProducts() {
            showNotification('info', 'Coming Soon', 'Export feature will be available soon!');
        }

        // Currency Switcher
        function switchCurrency(newCurrency) {
            window.location.href = '/admin/products?currency=' + newCurrency;
        }
    </script>
</body>
</html>