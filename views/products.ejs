<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        .products-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .settings-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 1px solid #eaeaea;
        }

        .currency-switcher, .language-switcher {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .switcher-label {
            font-weight: 600;
            color: #2c5aa0;
            font-size: 14px;
        }

        .currency-btn, .language-btn {
            padding: 10px 20px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
            font-size: 14px;
            text-decoration: none;
            color: #333;
        }

        .currency-btn.active, .language-btn.active {
            background: #2c5aa0;
            color: white;
            border-color: #2c5aa0;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 90, 160, 0.3);
        }

        .currency-btn:hover, .language-btn:hover {
            border-color: #2c5aa0;
            transform: translateY(-1px);
            text-decoration: none;
            color: #333;
        }

        .page-title {
            color: #2c5aa0;
            margin-bottom: 30px;
            text-align: center;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            padding: 20px 0;
        }

        .product-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 1px solid #eaeaea;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 200px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            overflow: hidden;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-name {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            line-height: 1.4;
        }

        .product-price {
            font-size: 20px;
            font-weight: bold;
            color: #2c5aa0;
            margin-bottom: 10px;
        }

        .product-category {
            display: inline-block;
            background: #f0f0f0;
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 12px;
            color: #666;
            margin-bottom: 10px;
        }

        .product-stock {
            color: #28a745;
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .out-of-stock {
            color: #dc3545;
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .product-description {
            color: #666;
            font-size: 14px;
            line-height: 1.5;
            margin-bottom: 15px;
            flex: 1;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: auto;
            flex-wrap: wrap;
        }

        .view-details {
            background: #007bff;
            color: white;
            padding: 10px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 14px;
        }

        .view-details:hover {
            background: #0056b3;
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .api-link {
            background: #28a745;
            color: white;
            padding: 10px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 14px;
        }

        .api-link:hover {
            background: #218838;
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .add-to-cart-btn {
            background: #ff6b00;
            color: white;
            border: none;
            padding: 10px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 14px;
        }

        .add-to-cart-btn:hover {
            background: #e55a00;
            transform: translateY(-2px);
        }

        .add-to-cart-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
        }

        .no-products {
            text-align: center;
            padding: 60px 40px;
            color: #666;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .no-products-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .no-products-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #2c5aa0;
        }

        .no-products-message {
            margin-bottom: 25px;
            line-height: 1.6;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .products-grid {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
            }
        }

        @media (max-width: 768px) {
            .products-container {
                padding: 15px;
            }

            .settings-bar {
                flex-direction: column;
                gap: 20px;
                align-items: stretch;
                padding: 15px;
            }

            .currency-switcher, .language-switcher {
                justify-content: center;
                flex-wrap: wrap;
            }

            .switcher-label {
                width: 100%;
                text-align: center;
                margin-bottom: 10px;
            }

            .products-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 15px;
            }

            .product-card {
                padding: 15px;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons .view-details,
            .action-buttons .api-link,
            .action-buttons .add-to-cart-btn {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            .products-container {
                padding: 10px;
            }

            .currency-switcher, .language-switcher {
                flex-direction: column;
                gap: 8px;
            }

            .currency-btn, .language-btn {
                width: 100%;
                text-align: center;
            }

            .products-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .product-image {
                height: 180px;
            }

            .page-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <%- include('notification') %>
    
    <div class="products-container">
        <!-- Settings Bar -->
        <div class="settings-bar">
            <div class="currency-switcher">
                <span class="switcher-label">üí∞ Currency:</span>
                <a href="/products?currency=IDR&lang=<%= language %>" 
                   class="currency-btn <%= currency === 'IDR' ? 'active' : '' %>">
                    IDR (Rp)
                </a>
                <a href="/products?currency=USD&lang=<%= language %>" 
                   class="currency-btn <%= currency === 'USD' ? 'active' : '' %>">
                    USD ($)
                </a>
            </div>
            
            <div class="language-switcher">
                <span class="switcher-label">üåê Language:</span>
                <a href="/products?lang=en&currency=<%= currency %>" 
                   class="language-btn <%= language === 'en' ? 'active' : '' %>">
                    English
                </a>
                <a href="/products?lang=id&currency=<%= currency %>" 
                   class="language-btn <%= language === 'id' ? 'active' : '' %>">
                    Indonesia
                </a>
            </div>
        </div>

        <h1 class="page-title">
            <span>üì¶</span>
            <%= title %>
        </h1>
        
        <% if (products && products.length > 0) { %>
            <div class="products-grid">
                <% products.forEach(function(product) { %>
                    <div class="product-card">
                        <div class="product-image">
                            <% if (product.image && product.image !== '/images/default.jpg') { %>
                                <img src="<%= product.image %>" alt="<%= product.name %>">
                            <% } else { %>
                                <div style="text-align: center; color: #666;">
                                    <div style="font-size: 3rem;">üñºÔ∏è</div>
                                    <div style="font-size: 12px; margin-top: 5px;">Image Coming Soon</div>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="product-name"><%= product.name %></div>
                        
                        <div class="product-price">
                            <% if (currency === 'IDR') { %>
                                Rp <%= (product.price * 15000).toLocaleString('id-ID') %>
                            <% } else { %>
                                $<%= product.price %>
                            <% } %>
                        </div>
                        
                        <span class="product-category"><%= product.category %></span>
                        
                        <div class="<%= product.stock > 0 ? 'product-stock' : 'out-of-stock' %>">
                            <% if (product.stock > 0) { %>
                                ‚úÖ <%= t ? t.in_stock : 'In Stock' %> (<%= product.stock %>)
                            <% } else { %>
                                ‚ùå <%= t ? t.out_of_stock : 'Out of Stock' %>
                            <% } %>
                        </div>
                        
                        <div class="product-description">
                            <%= product.description.length > 100 ? 
                                product.description.substring(0, 100) + '...' : 
                                product.description %>
                        </div>
                        
                        <div class="action-buttons">
                            <a href="/products/<%= product.id %>" class="view-details">
                                <span>üëÅÔ∏è</span>
                                <%= t ? t.view_details : 'View Details' %>
                            </a>
                            <a href="/api/products/<%= product.id %>" class="api-link" target="_blank">
                                <span>üîó</span>
                                API
                            </a>
                            <% if (product.stock > 0) { %>
                                <button class="add-to-cart-btn" data-product-id="<%= product.id %>">
                                    <span>üõí</span>
                                    <%= t ? t.add_to_cart : 'Add to Cart' %>
                                </button>
                            <% } else { %>
                                <button class="add-to-cart-btn" disabled>
                                    <span>‚ùå</span>
                                    <%= t ? t.out_of_stock : 'Out of Stock' %>
                                </button>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-products">
                <div class="no-products-icon">üì¶</div>
                <h3 class="no-products-title">
                    <%= t ? t.no_products : 'No Products Found' %>
                </h3>
                <p class="no-products-message">
                    <%= t ? t.no_products_message : 'There are no products available at the moment. Please check back later.' %>
                </p>
                <a href="/" class="btn btn-primary" style="padding: 12px 24px;">
                    <span>üè†</span>
                    Back to Home
                </a>
            </div>
        <% } %>
    </div>

    <script>
    // GANTI function addToCart dengan ini:
async function addToCart(productId, button) {
    console.log('üõí Adding to cart, product ID:', productId);
    
    // Show loading state
    const originalText = button.innerHTML;
    button.innerHTML = '<span>‚è≥</span> Adding...';
    button.disabled = true;
    
    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                productId: parseInt(productId), 
                quantity: 1 
            })
        });
        
        console.log('üì° Response status:', response.status);
        
        // Check if response is JSON
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            const text = await response.text();
            console.error('‚ùå Server returned non-JSON:', text.substring(0, 200));
            throw new Error('Server error. Please try again.');
        }
        
        const result = await response.json();
        console.log('‚úÖ Response result:', result);
        
        if (result.success) {
            // Show success notification
            if (typeof showNotification === 'function') {
                showNotification('success', 
                    'Success üéâ', 
                    'Product added to cart successfully!'
                );
            } else {
                alert('‚úÖ Product added to cart!');
            }
            
            // Update cart count - YANG DIPERBAIKI
            console.log('üîÑ Attempting to update cart count...');
            if (typeof updateCartCount === 'function') {
                console.log('‚úÖ updateCartCount function is available, calling it...');
                await updateCartCount(); // Tambah await untuk pastikan selesai
            } else {
                console.log('‚ùå updateCartCount function not available, checking window object...');
                if (typeof window.updateCartCount === 'function') {
                    console.log('‚úÖ window.updateCartCount is available, calling it...');
                    await window.updateCartCount();
                } else {
                    console.log('‚ùå No updateCartCount function found anywhere');
                    // Fallback: reload page
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                }
            }
            
        } else {
            // Show error notification
            if (typeof showNotification === 'function') {
                showNotification('error', 
                    'Error ‚ùå', 
                    result.message || 'Failed to add product to cart'
                );
            } else {
                alert('‚ùå ' + (result.message || 'Failed to add product to cart'));
            }
        }
    } catch (error) {
        console.error('‚ùå Add to cart error:', error);
        
        // Show error notification
        if (typeof showNotification === 'function') {
            showNotification('error', 
                'Error ‚ùå', 
                'Error adding to cart: ' + error.message
            );
        } else {
            alert('‚ùå Error adding to cart: ' + error.message);
        }
    } finally {
        // Reset button state
        button.innerHTML = originalText;
        button.disabled = false;
    }
}

// PERBAIKI event listener dengan debug info:
document.addEventListener('DOMContentLoaded', function() {
    console.log('‚úÖ DOM loaded, initializing add to cart buttons...');
    
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();
            event.stopPropagation();
            
            const productId = this.getAttribute('data-product-id');
            console.log('üõí Add to cart clicked for product:', productId);
            
            if (productId) {
                addToCart(productId, this);
            } else {
                console.error('‚ùå No product ID found on button');
                if (typeof showNotification === 'function') {
                    showNotification('error', 'Error', 'Product ID not found');
                } else {
                    alert('‚ùå Product ID not found');
                }
            }
        });
    });

    // Debug info lengkap
    console.log('=== CART SYSTEM DEBUG INFO ===');
    console.log('üõí Add to cart buttons found:', document.querySelectorAll('.add-to-cart-btn').length);
    console.log('üîî showNotification available:', typeof showNotification);
    console.log('üîÑ updateCartCount available:', typeof updateCartCount);
    console.log('üîÑ window.updateCartCount available:', typeof window.updateCartCount);
    console.log('üìä Cart counter element:', document.getElementById('cartCount'));
    console.log('==============================');
    
    // Test manual cart count update
    setTimeout(() => {
        console.log('üß™ Testing cart count update...');
        if (typeof updateCartCount === 'function') {
            updateCartCount();
        }
    }, 1000);
});
    </script>
</body>
</html>